          console.error('Error adding attendance:', error);
          showToast('Failed to add attendance record. Please try again.', 'error');
          
          // Reset button state on error
          if (addRecordBtn) {
            addRecordBtn.disabled = false;
            addRecordBtn.classList.remove('opacity-75', 'cursor-not-allowed');
            if (addIcon) {
              addIcon.setAttribute('data-lucide', 'plus');
              addIcon.classList.remove('animate-spin');
              renderLucideIcons();
            }
            if (addBtnText) addBtnText.textContent = 'Add Record';
          }
        }
      });
    }

    // Update attendance
    async function updateAttendance(attendanceId, status) {
      try {
        const response = await fetch(`/api/officer/attendance/${attendanceId}`, {
          method: 'PATCH',
          headers: {
            'Content-Type': 'application/json',
