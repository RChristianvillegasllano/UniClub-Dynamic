          addAttendanceForm.reset();
          
          // Reset button state
          if (addRecordBtn) {
            addRecordBtn.disabled = false;
            addRecordBtn.classList.remove('opacity-75', 'cursor-not-allowed');
            if (addIcon) {
              addIcon.setAttribute('data-lucide', 'plus');
              addIcon.classList.remove('animate-spin');
              renderLucideIcons();
