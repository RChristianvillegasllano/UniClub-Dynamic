        if (!response.ok) {
          throw new Error('Failed to update attendance');
        }

        const data = await response.json();
        showToast(`Attendance updated to ${status}`, 'success');
        
        // Reload page after a short delay
        setTimeout(() => {
          window.location.reload();
        }, 1000);
      } catch (error) {
        console.error('Error updating attendance:', error);
        showToast('Failed to update attendance. Please try again.', 'error');
      }
    }

    // Mark RSVP student as Present or Absent
    // Function to update attendance counts in header cards
    function updateAttendanceCounts(newStatus) {
      // Get current counts by recalculating from all rows
      const rows = document.querySelectorAll('.attendance-row');
      let presentCount = 0;
      let absentCount = 0;
      let notMarkedCount = 0;
      
      rows.forEach(row => {
        const status = row.getAttribute('data-status');
        if (status === 'present') {
          presentCount++;
        } else if (status === 'absent') {
          absentCount++;
        } else {
          notMarkedCount++;
        }
      });
      
      // Update the count displays using IDs
      const presentCountEl = document.getElementById('presentCountDisplay');
      const absentCountEl = document.getElementById('absentCountDisplay');
      const notMarkedCountEl = document.getElementById('notMarkedCountDisplay');
      const totalCountEl = document.getElementById('totalCountDisplay');
      
      if (presentCountEl) presentCountEl.textContent = presentCount;
      if (absentCountEl) absentCountEl.textContent = absentCount;
      if (notMarkedCountEl) notMarkedCountEl.textContent = notMarkedCount;
      if (totalCountEl) totalCountEl.textContent = rows.length;
    }
    
    async function markRSVPAttendance(eventId, studentId, studentName, status) {
      console.log('[Attendance] markRSVPAttendance called:', { eventId, studentId, studentName, status });
      
      try {
        // Get CSRF token from meta tag or hidden input
        const csrfToken = document.querySelector('meta[name="csrf-token"]')?.getAttribute('content') || 
                         document.querySelector('input[name="_csrf"]')?.value || '';
        
        console.log('[Attendance] CSRF token found:', !!csrfToken);
        
        if (!csrfToken) {
          throw new Error('CSRF token not found. Please refresh the page and try again.');
        }
        
        const url = `/api/officer/attendance/rsvp/${eventId}/${studentId}`;
        console.log('[Attendance] Making request to:', url);
        
        const response = await fetch(url, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'Accept': 'application/json'
          },
          body: JSON.stringify({ status, _csrf: csrfToken }),
          credentials: 'same-origin'
        });

        console.log('[Attendance] Response status:', response.status, response.statusText);

        if (!response.ok) {
          const errorData = await response.json().catch(() => ({}));
          console.error('[Attendance] Error response:', errorData);
          throw new Error(errorData.error || 'Failed to mark attendance');
        }

        const data = await response.json();
        console.log('[Attendance] Success response:', data);
        showToast(`${studentName} marked as ${status}`, 'success');
        
        // Update the buttons immediately without reloading
        const buttonContainer = document.getElementById(`attendance-buttons-${eventId}-${studentId}`);
        if (buttonContainer) {
          const presentBtn = buttonContainer.querySelector('[data-action="Present"]');
          const absentBtn = buttonContainer.querySelector('[data-action="Absent"]');
          
          if (status === 'Present') {
            // Update Present button
            if (presentBtn) {
              presentBtn.classList.remove('bg-green-600', 'hover:bg-green-700', 'hover:scale-105');
              presentBtn.classList.add('bg-green-700', 'cursor-not-allowed', 'opacity-75');
              presentBtn.disabled = true;
              presentBtn.innerHTML = '<i data-lucide="check" class="w-3 h-3"></i> Present ✓';
              renderLucideIcons();
            }
            // Update Absent button
            if (absentBtn) {
              absentBtn.classList.remove('bg-red-700', 'cursor-not-allowed', 'opacity-75');
              absentBtn.classList.add('bg-red-600', 'hover:bg-red-700', 'hover:scale-105');
              absentBtn.disabled = false;
              absentBtn.innerHTML = '<i data-lucide="x" class="w-3 h-3"></i> Absent';
              renderLucideIcons();
            }
          } else if (status === 'Absent') {
            // Update Absent button
            if (absentBtn) {
              absentBtn.classList.remove('bg-red-600', 'hover:bg-red-700', 'hover:scale-105');
              absentBtn.classList.add('bg-red-700', 'cursor-not-allowed', 'opacity-75');
              absentBtn.disabled = true;
              absentBtn.innerHTML = '<i data-lucide="x" class="w-3 h-3"></i> Absent ✓';
              renderLucideIcons();
            }
            // Update Present button
            if (presentBtn) {
              presentBtn.classList.remove('bg-green-700', 'cursor-not-allowed', 'opacity-75');
              presentBtn.classList.add('bg-green-600', 'hover:bg-green-700', 'hover:scale-105');
              presentBtn.disabled = false;
              presentBtn.innerHTML = '<i data-lucide="check" class="w-3 h-3"></i> Present';
              renderLucideIcons();
            }
          }
          
          // Update the status badge in the table
          const row = buttonContainer.closest('tr');
          if (row) {
            const statusCell = row.querySelector('td:nth-child(2)'); // Status column
            if (statusCell) {
              const statusBadge = statusCell.querySelector('span');
              if (statusBadge) {
                if (status === 'Present') {
                  statusBadge.className = 'inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-semibold bg-green-100 text-green-800';
                  statusBadge.textContent = 'Present';
                } else if (status === 'Absent') {
                  statusBadge.className = 'inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-semibold bg-red-100 text-red-800';
                  statusBadge.textContent = 'Absent';
                }
              }
            }
            
            // Update data-status attribute for filtering
            row.setAttribute('data-status', status.toLowerCase().replace(' ', '-'));
          }
          
          // Update the counts in the header cards
          updateAttendanceCounts(status);
        }
      } catch (error) {
        console.error('[Attendance] Error marking RSVP attendance:', error);
        showToast(error.message || 'Failed to mark attendance. Please try again.', 'error');
      }
    }
    
    // Make function globally accessible
    window.markRSVPAttendance = markRSVPAttendance;

    // Search functionality
    const attendanceSearch = document.getElementById('attendanceSearch');
    if (attendanceSearch) {
      attendanceSearch.addEventListener('input', function() {
        const searchTerm = this.value.toLowerCase();
        const rows = document.querySelectorAll('.attendance-row');
        rows.forEach(row => {
          const name = row.getAttribute('data-name');
          if (name && name.includes(searchTerm)) {
            row.style.display = '';
          } else {
            row.style.display = 'none';
          }
        });
      });
    }

    // Filter functionality
    const filters = {
      all: document.getElementById('filterAll'),
      present: document.getElementById('filterPresent'),
      absent: document.getElementById('filterAbsent'),
      notMarked: document.getElementById('filterNotMarked')
    };

    function setActiveFilter(activeFilter) {
      // Reset all buttons to inactive state
      if (filters.all) {
        filters.all.className = 'px-4 py-2 rounded-lg font-semibold transition-all duration-200 bg-red-600 text-white hover:bg-red-700 shadow-sm';
      }
      if (filters.present) {
        filters.present.className = 'px-4 py-2 rounded-lg font-semibold transition-all duration-200 border-2 border-green-400 text-green-600 bg-transparent hover:bg-green-50';
      }
      if (filters.absent) {
        filters.absent.className = 'px-4 py-2 rounded-lg font-semibold transition-all duration-200 border-2 border-red-400 text-red-600 bg-transparent hover:bg-red-50';
      }
      if (filters.notMarked) {
        filters.notMarked.className = 'px-4 py-2 rounded-lg font-semibold transition-all duration-200 border-2 border-yellow-400 text-yellow-600 bg-transparent hover:bg-yellow-50';
      }

      // Set active state
      if (activeFilter === 'all' && filters.all) {
        filters.all.className = 'px-4 py-2 rounded-lg font-semibold transition-all duration-200 bg-red-600 text-white hover:bg-red-700 shadow-sm';
      } else if (activeFilter === 'present' && filters.present) {
        filters.present.className = 'px-4 py-2 rounded-lg font-semibold transition-all duration-200 border-2 border-green-400 text-green-600 bg-green-50 hover:bg-green-100';
      } else if (activeFilter === 'absent' && filters.absent) {
        filters.absent.className = 'px-4 py-2 rounded-lg font-semibold transition-all duration-200 border-2 border-red-400 text-red-600 bg-red-50 hover:bg-red-100';
      } else if (activeFilter === 'not-marked' && filters.notMarked) {
        filters.notMarked.className = 'px-4 py-2 rounded-lg font-semibold transition-all duration-200 border-2 border-yellow-400 text-yellow-600 bg-yellow-50 hover:bg-yellow-100';
      }

      const rows = document.querySelectorAll('.attendance-row');
      rows.forEach((row, index) => {
        const status = row.getAttribute('data-status');
        const type = row.getAttribute('data-type');
        
        // For RSVP records, map 'going' and 'interested' to appropriate filters
        let shouldShow = false;
        if (activeFilter === 'all') {
          shouldShow = true;
        } else if (activeFilter === 'present' && (status === 'present' || status === 'going')) {
          shouldShow = true;
        } else if (activeFilter === 'absent' && status === 'absent') {
          shouldShow = true;
        } else if (activeFilter === 'not-marked' && status === 'not-marked') {
          shouldShow = true;
        } else if (status === activeFilter) {
          shouldShow = true;
        }
        
        if (shouldShow) {
          row.style.display = '';
          // Add fade-in animation
          row.style.opacity = '0';
          setTimeout(() => {
            row.style.transition = 'opacity 0.3s ease-in';
            row.style.opacity = '1';
          }, index * 20);
        } else {
          row.style.display = 'none';
        }
      });
    }

    if (filters.all) filters.all.addEventListener('click', () => setActiveFilter('all'));
    if (filters.present) filters.present.addEventListener('click', () => setActiveFilter('present'));
    if (filters.absent) filters.absent.addEventListener('click', () => setActiveFilter('absent'));
    if (filters.notMarked) filters.notMarked.addEventListener('click', () => setActiveFilter('not-marked'));

    // Toast helper
    function showToast(message, type) {
      const container = document.getElementById('toastContainer');
      if (!container) return;
      const toast = document.createElement('div');
      const base = 'px-4 py-3 rounded-lg shadow-lg text-white text-sm animate-[fadein_200ms_ease] flex items-center gap-2';
      const color =
        type === 'success' ? 'bg-green-600' :
        type === 'error' ? 'bg-red-600' :
        'bg-gray-900';
      toast.className = base + ' ' + color;
      toast.innerHTML = `
        <i data-lucide="${type === 'success' ? 'check-circle' : 'alert-circle'}" class="w-5 h-5"></i>
        <span>${message}</span>
      `;
      container.appendChild(toast);
      renderLucideIcons({ root: toast });
      setTimeout(() => {
        toast.style.opacity = '0';
        toast.style.transform = 'translateY(4px)';
        setTimeout(() => toast.remove(), 250);
      }, 3000);
    }

    // Profile dropdown
    const profileBtn = document.getElementById('profileBtn');
    const profileMenu = document.getElementById('profileMenu');
    
    if (profileBtn && profileMenu) {
      profileBtn.addEventListener('click', (e) => {
        e.stopPropagation();
        const isHidden = profileMenu.classList.contains('hidden');
        if (isHidden) {
          profileMenu.classList.remove('hidden');
          profileBtn.setAttribute('aria-expanded', 'true');
        } else {
          profileMenu.classList.add('hidden');
          profileBtn.setAttribute('aria-expanded', 'false');
        }
      });
    }
    
    document.addEventListener('click', (e) => {
      const withinProfile = profileMenu && profileMenu.contains(e.target);
      const withinProfileBtn = profileBtn && profileBtn.contains(e.target);
      if (!withinProfile && !withinProfileBtn) {
        if (profileMenu) profileMenu.classList.add('hidden');
        if (profileBtn) profileBtn.setAttribute('aria-expanded', 'false');
      }
    });

    // Collapsible Records group
    const recordsToggle = document.getElementById('recordsToggle');
    const recordsGroup = document.getElementById('recordsGroup');
    const recordsChevron = document.getElementById('recordsChevron');
    if (recordsToggle && recordsGroup) {
      recordsToggle.addEventListener('click', () => {
        const isHidden = recordsGroup.classList.contains('hidden');
        recordsGroup.classList.toggle('hidden');
        if (recordsChevron) {
          recordsChevron.style.transform = isHidden ? 'rotate(180deg)' : 'rotate(0deg)';
        }
      });
    }
