<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title || 'Attendance' %></title>
  <link rel="icon" href="https://phshirt.com/wp-content/uploads/2022/01/UM-Tagum-College-1950.png" type="image/x-icon">
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          fontFamily: { sans: ['Inter', 'ui-sans-serif', 'system-ui', 'Segoe UI', 'sans-serif'] },
          colors: {
            primary: { 700: '#7a0e0e', 800: '#6a0c0c', 900: '#5b0a0a' }
          }
        }
      }
    }
  </script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <script src="https://unpkg.com/lucide@latest"></script>
</head>
<body class="font-sans antialiased bg-gradient-to-br from-gray-50 to-gray-100">
  <div class="flex h-screen">
    <!-- Sidebar -->
    <%- include('./partials/sidebar', { activePage: (typeof activePage !== 'undefined' ? activePage : ''), club: (typeof club !== 'undefined' ? club : null) }) %>

    <!-- Main -->
    <main class="flex-1 overflow-auto">
      <!-- Header -->
      <header class="bg-white/90 backdrop-blur supports-[backdrop-filter]:bg-white/60 border-b border-gray-200 sticky top-0 z-10">
        <div class="flex items-center justify-between px-6 md:px-8 py-4">
          <div class="flex items-center gap-3">
            <div>
              <h1 class="text-2xl md:text-3xl font-extrabold text-gray-900 tracking-tight">Attendance</h1>
              <p class="text-gray-500 mt-1 text-sm">Track and manage member attendance</p>           
            </div>
          </div>
          <div class="relative flex items-center gap-3 md:gap-5">
            <!-- Profile -->
            <div class="relative pl-2 md:pl-4 border-l border-gray-200">
              <button id="profileBtn" class="flex items-center gap-3 hover:bg-gray-100 px-2 py-1.5 rounded-lg" aria-haspopup="true" aria-expanded="false" aria-controls="profileMenu">
                <div class="text-right hidden sm:block py-1">
                  <p class="text-sm font-bold text-gray-900 leading-tight"><%= (typeof officer !== 'undefined' && officer && officer.name) ? officer.name : 'Student' %></p>
                  <p class="text-xs text-gray-500 mt-1"><%= (typeof officer !== 'undefined' && officer && officer.role) ? officer.role : 'Club Officer' %></p>
                </div>
                <% if (typeof officer !== 'undefined' && officer && officer.photo_url) { %>
                  <img src="<%= officer.photo_url %>" alt="Profile" class="w-10 h-10 rounded-full ring-1 ring-red-600 object-cover">
                <% } else { %>
                  <div class="w-10 h-10 rounded-full ring-1 ring-red-600 bg-gray-200 flex items-center justify-center text-xs font-semibold text-gray-600">UC</div>
                <% } %>
              </button>
              <div id="profileMenu" class="hidden absolute right-0 mt-2 w-64 bg-white rounded-xl border border-gray-200 shadow-lg overflow-hidden z-[9999]">
                <div class="p-4 bg-gray-50 border-b">
                  <p class="font-semibold text-gray-800"><%= (typeof officer !== 'undefined' && officer && officer.name) ? officer.name : 'Student' %></p>
                  <p class="text-sm text-gray-500"><%= (typeof officer !== 'undefined' && officer && officer.role) ? officer.role : 'Club Officer' %></p>
                  <% if (typeof club !== 'undefined' && club) { %>
                    <p class="text-xs text-gray-500 mt-1"><%= club.name %></p>
                  <% } %>
                </div>
                <div class="p-2">
                  <a href="/officer/profile" class="block px-3 py-2 rounded-lg hover:bg-gray-50 text-sm">View Profile</a>
                  <a href="/officer/settings" class="block px-3 py-2 rounded-lg hover:bg-gray-50 text-sm">Settings</a>
                  <a href="/help" class="block px-3 py-2 rounded-lg hover:bg-gray-50 text-sm">Help & Support</a>
                </div>
                <div class="border-t p-2 bg-gray-50">
                  <form action="/officer/logout" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit" class="w-full text-left px-3 py-2 rounded-lg hover:bg-gray-100 text-sm text-red-600">Logout</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </header>

      <!-- Page content -->
      <div class="p-6 md:p-8">
        <!-- Stats Cards -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-4">
          <div class="bg-green-50 border-2 border-green-200 rounded-2xl p-6 shadow-sm hover:shadow-md hover:scale-[1.02] transition-all duration-300 animate-[slideIn_0.3s_ease-out]">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-green-700 text-sm font-medium mb-1">Present</p>
                <h3 class="text-3xl font-bold text-green-900"><%= (typeof presentCount !== 'undefined' ? presentCount : 0) %></h3>
                <p class="text-xs text-green-600 mt-1">Marked present</p>
              </div>
              <div class="bg-green-100 p-3 rounded-full">
                <i data-lucide="check-circle-2" class="w-6 h-6 text-green-600"></i>
              </div>
            </div>
          </div>
          <div class="bg-red-50 border-2 border-red-200 rounded-2xl p-6 shadow-sm hover:shadow-md hover:scale-[1.02] transition-all duration-300 animate-[slideIn_0.4s_ease-out]">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-red-700 text-sm font-medium mb-1">Absent</p>
                <h3 class="text-3xl font-bold text-red-900"><%= (typeof absentCount !== 'undefined' ? absentCount : 0) %></h3>
                <p class="text-xs text-red-600 mt-1">Marked absent</p>
              </div>
              <div class="bg-red-100 p-3 rounded-full">
                <i data-lucide="x-circle" class="w-6 h-6 text-red-600"></i>
              </div>
            </div>
          </div>
          <div class="bg-amber-50 border-2 border-yellow-300 rounded-2xl p-6 shadow-sm hover:shadow-md hover:scale-[1.02] transition-all duration-300 animate-[slideIn_0.5s_ease-out]">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-amber-700 text-sm font-medium mb-1">Not Marked</p>
                <h3 class="text-3xl font-bold text-amber-900"><%= (typeof notMarkedCount !== 'undefined' ? notMarkedCount : 0) %></h3>
                <p class="text-xs text-amber-600 mt-1">Pending</p>
              </div>
              <div class="bg-yellow-100 p-3 rounded-full">
                <i data-lucide="clock" class="w-6 h-6 text-amber-600"></i>
              </div>
            </div>
          </div>
          <div class="bg-blue-50 border-2 border-blue-200 rounded-2xl p-6 shadow-sm hover:shadow-md hover:scale-[1.02] transition-all duration-300 animate-[slideIn_0.6s_ease-out]">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-blue-700 text-sm font-medium mb-1">Total</p>
                <h3 class="text-3xl font-bold text-blue-900"><%= (typeof totalCount !== 'undefined' ? totalCount : 0) %></h3>
                <p class="text-xs text-blue-600 mt-1">All records</p>
              </div>
              <div class="bg-blue-100 p-3 rounded-full">
                <i data-lucide="users" class="w-6 h-6 text-blue-600"></i>
              </div>
            </div>
          </div>
        </div>

        <!-- Add Attendance Form -->
        <div class="bg-white rounded-2xl p-6 shadow-lg border border-gray-100 mb-6">
          <div class="mb-4">
            <h2 class="text-lg font-semibold text-gray-800">Add Attendance Record</h2>
            <p class="text-xs text-gray-500 mt-1">Choose member to record attendance for</p>
          </div>
          <form id="addAttendanceForm" class="flex flex-col md:flex-row gap-4">
            <div class="flex-1">
              <label class="block text-sm font-medium text-gray-700 mb-1">Select Member</label>
              <input 
                type="text" 
                id="memberNameInput" 
                required
                placeholder="Search members to add attendance..."
                class="w-full px-4 py-2.5 border-2 border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-600 focus:border-red-600 shadow-sm"
              />
            </div>
            <div class="md:w-48">
              <label class="block text-sm font-medium text-gray-700 mb-1">Status</label>
              <select 
                id="statusSelect" 
                required
                class="w-full px-4 py-2.5 border-2 border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-600 focus:border-red-600 shadow-sm"
              >
                <option value="Present">Present</option>
                <option value="Absent">Absent</option>
                <option value="Not Marked">Not Marked</option>
              </select>
            </div>
            <div class="flex items-end">
              <button 
                type="submit"
                id="addRecordBtn"
                class="w-full md:w-auto px-6 py-3 bg-red-600 text-white rounded-lg font-semibold tracking-wide hover:bg-red-700 transition-all duration-200 shadow-sm flex items-center justify-center gap-2"
              >
                <i data-lucide="plus" class="w-5 h-5" id="addIcon"></i>
                <span id="addBtnText">Add Record</span>
              </button>
            </div>
          </form>
        </div>

        <!-- Filters and Search -->
        <div class="bg-white rounded-2xl p-6 shadow-lg border border-gray-100 mb-6">
          <div class="flex flex-col md:flex-row gap-4 items-center justify-between">
            <div class="flex-1 w-full md:w-auto">
              <div class="relative">
                <i data-lucide="search" class="absolute left-3 top-1/2 transform -translate-y-1/2 w-5 h-5 text-gray-500"></i>
                <input 
                  type="text" 
                  id="attendanceSearch" 
                  placeholder="Search by member name..." 
                  class="w-full pl-10 pr-4 py-2.5 border-2 border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-600 focus:border-red-600 shadow-sm"
                />
              </div>
              <p class="text-xs text-gray-500 mt-1.5 ml-1">Search existing records below</p>
            </div>
            <div class="flex gap-2">
              <button 
                id="filterAll" 
                class="px-4 py-2 rounded-lg font-semibold transition-all duration-200 bg-red-600 text-white hover:bg-red-700 shadow-sm"
              >
                All
              </button>
              <button 
                id="filterPresent" 
                class="px-4 py-2 rounded-lg font-semibold transition-all duration-200 border-2 border-green-400 text-green-600 bg-transparent hover:bg-green-50"
              >
                Present
              </button>
              <button 
                id="filterAbsent" 
                class="px-4 py-2 rounded-lg font-semibold transition-all duration-200 border-2 border-red-400 text-red-600 bg-transparent hover:bg-red-50"
              >
                Absent
              </button>
              <button 
                id="filterNotMarked" 
                class="px-4 py-2 rounded-lg font-semibold transition-all duration-200 border-2 border-yellow-400 text-yellow-600 bg-transparent hover:bg-yellow-50"
              >
                Not Marked
              </button>
            </div>
          </div>
        </div>

        <!-- Attendance Table -->
        <div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden">
          <div class="overflow-x-auto">
            <table class="min-w-full">
              <thead class="bg-gray-50 text-gray-700 border-b-2 border-gray-200">
                <tr>
                  <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider">Member Name</th>
                  <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider">Status</th>
                  <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider">Date</th>
                  <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider">Actions</th>
                </tr>
              </thead>
              <tbody id="attendanceTableBody" class="divide-y divide-slate-200">
                <% if (typeof attendance !== 'undefined' && attendance && attendance.length) { %>
                  <% attendance.forEach(function(entry) { %>
                    <tr class="hover:bg-gray-50 transition-colors attendance-row" data-status="<%= (entry.status || 'Not Marked').toLowerCase().replace(' ', '-') %>" data-name="<%= entry.member_name.toLowerCase() %>">
                      <td class="px-6 py-4 whitespace-nowrap">
                        <div class="text-sm font-semibold text-gray-900"><%= entry.member_name %></div>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap">
                        <% 
                          const status = (entry.status || 'Not Marked').toLowerCase();
                          const statusColors = {
                            'present': 'bg-green-100 text-green-800',
                            'absent': 'bg-red-100 text-red-800',
                            'not marked': 'bg-amber-100 text-amber-800',
                            'not-marked': 'bg-amber-100 text-amber-800'
                          };
                          const statusColor = statusColors[status] || 'bg-gray-100 text-gray-800';
                          const displayStatus = entry.status || 'Not Marked';
                        %>
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold <%= statusColor %>">
                          <%= displayStatus %>
                        </span>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap">
                        <div class="text-sm text-gray-600">
                          <%= new Date(entry.created_at).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) %>
                        </div>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap">
                        <div class="flex gap-2">
                          <button 
                            onclick="updateAttendance(<%= entry.id %>, 'Present')"
                            class="px-3 py-1.5 bg-green-600 text-white text-xs font-semibold rounded-lg hover:bg-green-700 hover:scale-105 transition-all duration-200 shadow-sm flex items-center gap-1"
                          >
                            <i data-lucide="check" class="w-3 h-3"></i>
                            Present
                          </button>
                          <button 
                            onclick="updateAttendance(<%= entry.id %>, 'Absent')"
                            class="px-3 py-1.5 bg-red-600 text-white text-xs font-semibold rounded-lg hover:bg-red-700 hover:scale-105 transition-all duration-200 shadow-sm flex items-center gap-1"
                          >
                            <i data-lucide="x" class="w-3 h-3"></i>
                            Absent
                          </button>
                        </div>
                      </td>
                    </tr>
                  <% }) %>
                <% } else { %>
                  <tr>
                    <td colspan="4" class="px-6 py-16">
                      <div class="bg-gray-50 border border-gray-200 rounded-2xl p-8 text-center">
                        <div class="flex flex-col items-center gap-4">
                          <div class="bg-gray-100 rounded-full p-4">
                            <i data-lucide="calendar-x" class="w-10 h-10 text-gray-400"></i>
                          </div>
                          <div class="space-y-2">
                            <p class="text-gray-600 font-semibold text-lg">No attendance records found</p>
                            <p class="text-sm text-gray-500 max-w-md">Start tracking attendance by adding records above.</p>
                          </div>
                        </div>
                      </div>
                    </td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </main>
  </div>

  <!-- Toasts -->
  <div id="toastContainer" class="fixed right-4 bottom-4 z-[10000] flex flex-col gap-2"></div>

  <style>
    @keyframes slideIn {
      from {
        opacity: 0;
        transform: translateY(10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    
    @keyframes fadeIn {
      from {
        opacity: 0;
      }
      to {
        opacity: 1;
      }
    }
    
    .attendance-row {
      animation: fadeIn 0.3s ease-out;
    }
    
    .attendance-row:hover {
      transform: translateY(-1px);
    }
  </style>

  <script>
    const renderLucideIcons = (options) => {
      if (window.lucide?.createIcons) {
        window.lucide.createIcons(options);
      } else if (window.lucide?.replace) {
        window.lucide.replace(options);
      }
    };

    // Initialize Lucide icons
    document.addEventListener('DOMContentLoaded', () => {
      renderLucideIcons();
    });

    // Add attendance form
    const addAttendanceForm = document.getElementById('addAttendanceForm');
    const addRecordBtn = document.getElementById('addRecordBtn');
    const addIcon = document.getElementById('addIcon');
    const addBtnText = document.getElementById('addBtnText');
    
    if (addAttendanceForm) {
      addAttendanceForm.addEventListener('submit', async (e) => {
        e.preventDefault();
        const memberName = document.getElementById('memberNameInput').value;
        const status = document.getElementById('statusSelect').value;

        // Show loading state
        if (addRecordBtn) {
          addRecordBtn.disabled = true;
          addRecordBtn.classList.add('opacity-75', 'cursor-not-allowed');
          if (addIcon) {
            addIcon.setAttribute('data-lucide', 'loader-2');
            addIcon.classList.add('animate-spin');
            renderLucideIcons();
          }
          if (addBtnText) addBtnText.textContent = 'Adding...';
        }

        try {
          const response = await fetch('/api/officer/attendance', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({ member_name: memberName, status }),
          });

          if (!response.ok) {
            throw new Error('Failed to add attendance');
          }

          const data = await response.json();
          showToast('Attendance record added successfully', 'success');
          
          // Reset form
          addAttendanceForm.reset();
          
          // Reset button state
          if (addRecordBtn) {
            addRecordBtn.disabled = false;
            addRecordBtn.classList.remove('opacity-75', 'cursor-not-allowed');
            if (addIcon) {
              addIcon.setAttribute('data-lucide', 'plus');
              addIcon.classList.remove('animate-spin');
              renderLucideIcons();
            }
            if (addBtnText) addBtnText.textContent = 'Add Record';
          }
          
          // Reload page after a short delay to show new record with animation
          setTimeout(() => {
            window.location.reload();
          }, 1500);
        } catch (error) {
          console.error('Error adding attendance:', error);
          showToast('Failed to add attendance record. Please try again.', 'error');
          
          // Reset button state on error
          if (addRecordBtn) {
            addRecordBtn.disabled = false;
            addRecordBtn.classList.remove('opacity-75', 'cursor-not-allowed');
            if (addIcon) {
              addIcon.setAttribute('data-lucide', 'plus');
              addIcon.classList.remove('animate-spin');
              renderLucideIcons();
            }
            if (addBtnText) addBtnText.textContent = 'Add Record';
          }
        }
      });
    }

    // Update attendance
    async function updateAttendance(attendanceId, status) {
      try {
        const response = await fetch(`/api/officer/attendance/${attendanceId}`, {
          method: 'PATCH',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ status }),
        });

        if (!response.ok) {
          throw new Error('Failed to update attendance');
        }

        const data = await response.json();
        showToast(`Attendance updated to ${status}`, 'success');
        
        // Reload page after a short delay
        setTimeout(() => {
          window.location.reload();
        }, 1000);
      } catch (error) {
        console.error('Error updating attendance:', error);
        showToast('Failed to update attendance. Please try again.', 'error');
      }
    }

    // Search functionality
    const attendanceSearch = document.getElementById('attendanceSearch');
    if (attendanceSearch) {
      attendanceSearch.addEventListener('input', function() {
        const searchTerm = this.value.toLowerCase();
        const rows = document.querySelectorAll('.attendance-row');
        rows.forEach(row => {
          const name = row.getAttribute('data-name');
          if (name.includes(searchTerm)) {
            row.style.display = '';
          } else {
            row.style.display = 'none';
          }
        });
      });
    }

    // Filter functionality
    const filters = {
      all: document.getElementById('filterAll'),
      present: document.getElementById('filterPresent'),
      absent: document.getElementById('filterAbsent'),
      notMarked: document.getElementById('filterNotMarked')
    };

    function setActiveFilter(activeFilter) {
      // Reset all buttons to inactive state
      if (filters.all) {
        filters.all.className = 'px-4 py-2 rounded-lg font-semibold transition-all duration-200 bg-red-600 text-white hover:bg-red-700 shadow-sm';
      }
      if (filters.present) {
        filters.present.className = 'px-4 py-2 rounded-lg font-semibold transition-all duration-200 border-2 border-green-400 text-green-600 bg-transparent hover:bg-green-50';
      }
      if (filters.absent) {
        filters.absent.className = 'px-4 py-2 rounded-lg font-semibold transition-all duration-200 border-2 border-red-400 text-red-600 bg-transparent hover:bg-red-50';
      }
      if (filters.notMarked) {
        filters.notMarked.className = 'px-4 py-2 rounded-lg font-semibold transition-all duration-200 border-2 border-yellow-400 text-yellow-600 bg-transparent hover:bg-yellow-50';
      }

      // Set active state
      if (activeFilter === 'all' && filters.all) {
        filters.all.className = 'px-4 py-2 rounded-lg font-semibold transition-all duration-200 bg-red-600 text-white hover:bg-red-700 shadow-sm';
      } else if (activeFilter === 'present' && filters.present) {
        filters.present.className = 'px-4 py-2 rounded-lg font-semibold transition-all duration-200 border-2 border-green-400 text-green-600 bg-green-50 hover:bg-green-100';
      } else if (activeFilter === 'absent' && filters.absent) {
        filters.absent.className = 'px-4 py-2 rounded-lg font-semibold transition-all duration-200 border-2 border-red-400 text-red-600 bg-red-50 hover:bg-red-100';
      } else if (activeFilter === 'not-marked' && filters.notMarked) {
        filters.notMarked.className = 'px-4 py-2 rounded-lg font-semibold transition-all duration-200 border-2 border-yellow-400 text-yellow-600 bg-yellow-50 hover:bg-yellow-100';
      }

      const rows = document.querySelectorAll('.attendance-row');
      rows.forEach((row, index) => {
        const status = row.getAttribute('data-status');
        if (activeFilter === 'all' || status === activeFilter) {
          row.style.display = '';
          // Add fade-in animation
          row.style.opacity = '0';
          setTimeout(() => {
            row.style.transition = 'opacity 0.3s ease-in';
            row.style.opacity = '1';
          }, index * 20);
        } else {
          row.style.display = 'none';
        }
      });
    }

    if (filters.all) filters.all.addEventListener('click', () => setActiveFilter('all'));
    if (filters.present) filters.present.addEventListener('click', () => setActiveFilter('present'));
    if (filters.absent) filters.absent.addEventListener('click', () => setActiveFilter('absent'));
    if (filters.notMarked) filters.notMarked.addEventListener('click', () => setActiveFilter('not-marked'));

    // Toast helper
    function showToast(message, type) {
      const container = document.getElementById('toastContainer');
      if (!container) return;
      const toast = document.createElement('div');
      const base = 'px-4 py-3 rounded-lg shadow-lg text-white text-sm animate-[fadein_200ms_ease] flex items-center gap-2';
      const color =
        type === 'success' ? 'bg-green-600' :
        type === 'error' ? 'bg-red-600' :
        'bg-gray-900';
      toast.className = base + ' ' + color;
      toast.innerHTML = `
        <i data-lucide="${type === 'success' ? 'check-circle' : 'alert-circle'}" class="w-5 h-5"></i>
        <span>${message}</span>
      `;
      container.appendChild(toast);
      renderLucideIcons({ root: toast });
      setTimeout(() => {
        toast.style.opacity = '0';
        toast.style.transform = 'translateY(4px)';
        setTimeout(() => toast.remove(), 250);
      }, 3000);
    }

    // Profile dropdown
    const profileBtn = document.getElementById('profileBtn');
    const profileMenu = document.getElementById('profileMenu');
    
    if (profileBtn && profileMenu) {
      profileBtn.addEventListener('click', (e) => {
        e.stopPropagation();
        const isHidden = profileMenu.classList.contains('hidden');
        if (isHidden) {
          profileMenu.classList.remove('hidden');
          profileBtn.setAttribute('aria-expanded', 'true');
        } else {
          profileMenu.classList.add('hidden');
          profileBtn.setAttribute('aria-expanded', 'false');
        }
      });
    }
    
    document.addEventListener('click', (e) => {
      const withinProfile = profileMenu && profileMenu.contains(e.target);
      const withinProfileBtn = profileBtn && profileBtn.contains(e.target);
      if (!withinProfile && !withinProfileBtn) {
        if (profileMenu) profileMenu.classList.add('hidden');
        if (profileBtn) profileBtn.setAttribute('aria-expanded', 'false');
      }
    });

    // Collapsible Records group
    const recordsToggle = document.getElementById('recordsToggle');
    const recordsGroup = document.getElementById('recordsGroup');
    const recordsChevron = document.getElementById('recordsChevron');
    if (recordsToggle && recordsGroup) {
      recordsToggle.addEventListener('click', () => {
        const isHidden = recordsGroup.classList.contains('hidden');
        recordsGroup.classList.toggle('hidden');
        if (recordsChevron) {
          recordsChevron.style.transform = isHidden ? 'rotate(180deg)' : 'rotate(0deg)';
        }
      });
    }
  </script>
</body>
