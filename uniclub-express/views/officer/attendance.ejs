<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="csrf-token" content="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
  <title><%= title || 'Attendance' %></title>
  <link rel="icon" href="https://phshirt.com/wp-content/uploads/2022/01/UM-Tagum-College-1950.png" type="image/x-icon">
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          fontFamily: { sans: ['Inter', 'ui-sans-serif', 'system-ui', 'Segoe UI', 'sans-serif'] },
          colors: {
            primary: { 700: '#7a0e0e', 800: '#6a0c0c', 900: '#5b0a0a' }
          }
        }
      }
    }
  </script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <script src="https://unpkg.com/lucide@latest"></script>
</head>
<body class="font-sans antialiased bg-gradient-to-br from-gray-50 to-gray-100">
  <div class="flex h-screen">
    <!-- Sidebar -->
    <%- include('./partials/sidebar', { 
      activePage: (typeof activePage !== 'undefined' ? activePage : ''), 
      club: (typeof club !== 'undefined' ? club : null),
      accessiblePages: (typeof accessiblePages !== 'undefined' ? accessiblePages : []),
      officer: (typeof officer !== 'undefined' ? officer : null)
    }) %>

    <!-- Main -->
    <main class="flex-1 overflow-auto">
      <!-- Header -->
      <header class="bg-white/90 backdrop-blur supports-[backdrop-filter]:bg-white/60 border-b border-gray-200 sticky top-0 z-10">
        <div class="flex items-center justify-between px-6 md:px-8 py-4">
          <div class="flex items-center gap-3">
            <div>
              <h1 class="text-2xl md:text-3xl font-extrabold text-gray-900 tracking-tight">Attendance</h1>
              <p class="text-gray-500 mt-1 text-sm">Track and manage member attendance</p>           
            </div>
          </div>
          <div class="relative flex items-center gap-3 md:gap-5">
            <!-- Profile -->
            <div class="relative pl-2 md:pl-4 border-l border-gray-200">
              <button id="profileBtn" class="flex items-center gap-3 hover:bg-gray-100 px-2 py-1.5 rounded-lg" aria-haspopup="true" aria-expanded="false" aria-controls="profileMenu">
                <div class="text-right hidden sm:block py-1">
                  <p class="text-sm font-bold text-gray-900 leading-tight"><%= (typeof officer !== 'undefined' && officer && officer.name) ? officer.name : 'Student' %></p>
                  <p class="text-xs text-gray-500 mt-1"><%= (typeof officer !== 'undefined' && officer && officer.role) ? officer.role : 'Club Officer' %></p>
                </div>
                <% if (typeof officer !== 'undefined' && officer && officer.profile_picture) { %>
                  <img src="<%= officer.profile_picture %>" alt="Profile" class="w-10 h-10 rounded-full ring-1 ring-red-600 object-cover" onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                  <div class="hidden w-10 h-10 rounded-full ring-1 ring-red-600 bg-gray-200 flex items-center justify-center text-xs font-semibold text-gray-600">
                    <%= (typeof officer !== 'undefined' && officer && officer.name) ? (officer.name.charAt(0).toUpperCase() + (officer.name.split(' ')[1] ? officer.name.split(' ')[1].charAt(0).toUpperCase() : '')) : 'UC' %>
                  </div>
                <% } else { %>
                  <div class="w-10 h-10 rounded-full ring-1 ring-red-600 bg-gray-200 flex items-center justify-center text-xs font-semibold text-gray-600">
                    <%= (typeof officer !== 'undefined' && officer && officer.name) ? (officer.name.charAt(0).toUpperCase() + (officer.name.split(' ')[1] ? officer.name.split(' ')[1].charAt(0).toUpperCase() : '')) : 'UC' %>
                  </div>
                <% } %>
              </button>
              <div id="profileMenu" class="hidden absolute right-0 mt-2 w-64 bg-white rounded-xl border border-gray-200 shadow-lg overflow-hidden z-[9999]">
                <div class="p-4 bg-gray-50 border-b">
                  <p class="font-semibold text-gray-800"><%= (typeof officer !== 'undefined' && officer && officer.name) ? officer.name : 'Student' %></p>
                  <p class="text-sm text-gray-500"><%= (typeof officer !== 'undefined' && officer && officer.role) ? officer.role : 'Club Officer' %></p>
                  <% if (typeof club !== 'undefined' && club) { %>
                    <p class="text-xs text-gray-500 mt-1"><%= club.name %></p>
                  <% } %>
                </div>
                <div class="p-2">
                  <a href="/officer/profile" class="block px-3 py-2 rounded-lg hover:bg-gray-50 text-sm">View Profile</a>
                  <a href="/officer/settings" class="block px-3 py-2 rounded-lg hover:bg-gray-50 text-sm">Settings</a>
                  <a href="/help" class="block px-3 py-2 rounded-lg hover:bg-gray-50 text-sm">Help & Support</a>
                </div>
                <div class="border-t p-2 bg-gray-50">
                  <form action="/officer/logout" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit" class="w-full text-left px-3 py-2 rounded-lg hover:bg-gray-100 text-sm text-red-600">Logout</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </header>

      <!-- Page content -->
      <div class="p-6 md:p-8">
        <!-- Stats Cards -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-4">
          <div class="bg-green-50 border-2 border-green-200 rounded-2xl p-6 shadow-sm hover:shadow-md hover:scale-[1.02] transition-all duration-300 animate-[slideIn_0.3s_ease-out]">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-green-700 text-sm font-medium mb-1">Present</p>
                <h3 id="presentCountDisplay" class="text-3xl font-bold text-green-900"><%= (typeof presentCount !== 'undefined' ? presentCount : 0) %></h3>
                <p class="text-xs text-green-600 mt-1">Marked present</p>
              </div>
              <div class="bg-green-100 p-3 rounded-full">
                <i data-lucide="check-circle-2" class="w-6 h-6 text-green-600"></i>
              </div>
            </div>
          </div>
          <div class="bg-red-50 border-2 border-red-200 rounded-2xl p-6 shadow-sm hover:shadow-md hover:scale-[1.02] transition-all duration-300 animate-[slideIn_0.4s_ease-out]">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-red-700 text-sm font-medium mb-1">Absent</p>
                <h3 id="absentCountDisplay" class="text-3xl font-bold text-red-900"><%= (typeof absentCount !== 'undefined' ? absentCount : 0) %></h3>
                <p class="text-xs text-red-600 mt-1">Marked absent</p>
              </div>
              <div class="bg-red-100 p-3 rounded-full">
                <i data-lucide="x-circle" class="w-6 h-6 text-red-600"></i>
              </div>
            </div>
          </div>
          <div class="bg-amber-50 border-2 border-yellow-300 rounded-2xl p-6 shadow-sm hover:shadow-md hover:scale-[1.02] transition-all duration-300 animate-[slideIn_0.5s_ease-out]">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-amber-700 text-sm font-medium mb-1">Not Marked</p>
                <h3 id="notMarkedCountDisplay" class="text-3xl font-bold text-amber-900"><%= (typeof notMarkedCount !== 'undefined' ? notMarkedCount : 0) %></h3>
                <p class="text-xs text-amber-600 mt-1">Pending</p>
              </div>
              <div class="bg-yellow-100 p-3 rounded-full">
                <i data-lucide="clock" class="w-6 h-6 text-amber-600"></i>
              </div>
            </div>
          </div>
          <div class="bg-blue-50 border-2 border-blue-200 rounded-2xl p-6 shadow-sm hover:shadow-md hover:scale-[1.02] transition-all duration-300 animate-[slideIn_0.6s_ease-out]">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-blue-700 text-sm font-medium mb-1">Total</p>
                <h3 id="totalCountDisplay" class="text-3xl font-bold text-blue-900"><%= (typeof totalCount !== 'undefined' ? totalCount : 0) %></h3>
                <p class="text-xs text-blue-600 mt-1">All records</p>
              </div>
              <div class="bg-blue-100 p-3 rounded-full">
                <i data-lucide="users" class="w-6 h-6 text-blue-600"></i>
              </div>
            </div>
          </div>
        </div>

        <!-- Add Attendance Form - Only show if user has permission -->
        <% 
          var canCreateAttendance = (typeof canCreateAttendance !== 'undefined' && canCreateAttendance) || false;
        %>
        <% if (canCreateAttendance) { %>
        <div class="bg-white rounded-2xl p-6 shadow-lg border border-gray-100 mb-6">
          <div class="mb-4">
            <h2 class="text-lg font-semibold text-gray-800">Add Attendance Record</h2>
            <p class="text-xs text-gray-500 mt-1">Choose member to record attendance for</p>
          </div>
          <form id="addAttendanceForm" class="flex flex-col md:flex-row gap-4">
            <div class="flex-1">
              <label class="block text-sm font-medium text-gray-700 mb-1">Select Member</label>
              <input 
                type="text" 
                id="memberNameInput" 
                required
                placeholder="Search members to add attendance..."
                class="w-full px-4 py-2.5 border-2 border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-600 focus:border-red-600 shadow-sm"
              />
            </div>
            <div class="md:w-48">
              <label class="block text-sm font-medium text-gray-700 mb-1">Status</label>
              <select 
                id="statusSelect" 
                required
                class="w-full px-4 py-2.5 border-2 border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-600 focus:border-red-600 shadow-sm"
              >
                <option value="Present">Present</option>
                <option value="Absent">Absent</option>
                <option value="Not Marked">Not Marked</option>
              </select>
            </div>
            <div class="flex items-end">
              <button 
                type="submit"
                id="addRecordBtn"
                class="w-full md:w-auto px-6 py-3 bg-red-600 text-white rounded-lg font-semibold tracking-wide hover:bg-red-700 transition-all duration-200 shadow-sm flex items-center justify-center gap-2"
              >
                <i data-lucide="plus" class="w-5 h-5" id="addIcon"></i>
                <span id="addBtnText">Add Record</span>
              </button>
            </div>
          </form>
        </div>
        <% } else { %>
        <!-- View-only message for users without create permission -->
        <div class="bg-amber-50 border-2 border-amber-200 rounded-2xl p-6 shadow-lg mb-6">
          <div class="flex items-center gap-3">
            <i data-lucide="info" class="w-6 h-6 text-amber-600"></i>
            <p class="text-amber-800 font-medium">You have view-only access to attendance records. Contact an administrator to request permission to add attendance.</p>
          </div>
        </div>
        <% } %>

        <!-- Filters and Search -->
        <div class="bg-white rounded-2xl p-6 shadow-lg border border-gray-100 mb-6">
          <div class="flex flex-col md:flex-row gap-4 items-center justify-between">
            <div class="flex-1 w-full md:w-auto">
              <div class="relative">
                <i data-lucide="search" class="absolute left-3 top-1/2 transform -translate-y-1/2 w-5 h-5 text-gray-500"></i>
                <input 
                  type="text" 
                  id="attendanceSearch" 
                  placeholder="Search by member name..." 
                  class="w-full pl-10 pr-4 py-2.5 border-2 border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-600 focus:border-red-600 shadow-sm"
                />
              </div>
              <p class="text-xs text-gray-500 mt-1.5 ml-1">Search existing records below</p>
            </div>
            <div class="flex gap-2">
              <button 
                id="filterAll" 
                class="px-4 py-2 rounded-lg font-semibold transition-all duration-200 bg-red-600 text-white hover:bg-red-700 shadow-sm"
              >
                All
              </button>
              <button 
                id="filterPresent" 
                class="px-4 py-2 rounded-lg font-semibold transition-all duration-200 border-2 border-green-400 text-green-600 bg-transparent hover:bg-green-50"
              >
                Present
              </button>
              <button 
                id="filterAbsent" 
                class="px-4 py-2 rounded-lg font-semibold transition-all duration-200 border-2 border-red-400 text-red-600 bg-transparent hover:bg-red-50"
              >
                Absent
              </button>
              <button 
                id="filterNotMarked" 
                class="px-4 py-2 rounded-lg font-semibold transition-all duration-200 border-2 border-yellow-400 text-yellow-600 bg-transparent hover:bg-yellow-50"
              >
                Not Marked
              </button>
            </div>
          </div>
        </div>

        <!-- Attendance Table -->
        <div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden">
          <div class="overflow-x-auto">
            <table class="min-w-full">
              <thead class="bg-gray-50 text-gray-700 border-b-2 border-gray-200">
                <tr>
                  <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider">Member Name</th>
                  <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider">Status</th>
                  <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider">Event</th>
                  <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider">Date</th>
                  <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-wider">Actions</th>
                </tr>
              </thead>
              <tbody id="attendanceTableBody" class="divide-y divide-slate-200">
                <% 
                  // Only use RSVP students (all attendance comes from event_attendance)
                  const allRecords = [];
                  
                  // Add RSVP students (this includes all attendance records)
                  // Use a Set to track unique combinations of event_id and student_id to prevent duplicates
                  const seenKeys = new Set();
                  if (typeof rsvpStudents !== 'undefined' && rsvpStudents && rsvpStudents.length) {
                    rsvpStudents.forEach(function(rsvp) {
                      // Create unique key from event_id and student_id
                      const uniqueKey = `${rsvp.event_id || rsvp.eventId || 'unknown'}_${rsvp.student_id || rsvp.studentId || 'unknown'}`;
                      
                      // Skip if we've already seen this combination
                      if (seenKeys.has(uniqueKey)) {
                        return;
                      }
                      seenKeys.add(uniqueKey);
                      
                      // Use attendance_status if available, otherwise default to 'Not Marked'
                      const attendanceStatus = rsvp.attendance_status || 'Not Marked';
                      allRecords.push({
                        type: 'rsvp',
                        id: rsvp.id,
                        member_name: rsvp.student_name,
                        status: attendanceStatus, // Use attendance_status (Present/Absent/Not Marked)
                        rsvp_status: (rsvp.rsvp_status === 'going' || !rsvp.rsvp_status) ? 'Going' : 'Interested',
                        date: rsvp.rsvp_date,
                        event_name: rsvp.event_name,
                        event_date: rsvp.event_date,
                        event_status: rsvp.event_status || 'Scheduled',
                        event_id: rsvp.event_id || rsvp.eventId, // Ensure event_id is included
                        student_id: rsvp.student_id || rsvp.studentId, // Ensure student_id is included
                        studentid: rsvp.studentid,
                        program: rsvp.program,
                        profile_picture: rsvp.profile_picture
                      });
                    });
                  }
                %>
                <% if (allRecords.length > 0) { %>
                  <% allRecords.forEach(function(entry) { %>
                    <tr class="hover:bg-gray-50 transition-colors attendance-row" data-status="<%= entry.status.toLowerCase().replace(' ', '-') %>" data-name="<%= entry.member_name.toLowerCase() %>" data-type="<%= entry.type %>">
                      <td class="px-6 py-4">
                        <div class="flex items-center gap-3">
                          <% if (entry.type === 'rsvp') { %>
                            <% 
                              const rsvpPhoto = entry.profile_picture || '';
                              const rsvpInitials = (entry.member_name || '').split(' ').map(n => n[0]).join('').substring(0, 2).toUpperCase();
                              const hasRsvpPhoto = rsvpPhoto && rsvpPhoto.trim() !== '';
                            %>
                            <div class="w-10 h-10 rounded-full overflow-hidden bg-purple-100 flex items-center justify-center flex-shrink-0">
                              <% if (hasRsvpPhoto) { %>
                                <img src="<%= rsvpPhoto %>" alt="<%= entry.member_name %>" class="w-full h-full object-cover" onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                                <span class="text-purple-700 font-semibold text-xs" style="display: none;"><%= rsvpInitials %></span>
                              <% } else { %>
                                <span class="text-purple-700 font-semibold text-xs"><%= rsvpInitials %></span>
                              <% } %>
                            </div>
                          <% } %>
                          <div>
                            <div class="text-sm font-semibold text-gray-900"><%= entry.member_name %></div>
                            <% if (entry.type === 'rsvp' && entry.studentid) { %>
                              <div class="text-xs text-gray-500"><%= entry.studentid %> • <%= entry.program || 'N/A' %></div>
                            <% } %>
                          </div>
                        </div>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap">
                        <% 
                          const status = entry.status.toLowerCase();
                          const statusColors = {
                            'present': 'bg-green-100 text-green-800',
                            'absent': 'bg-red-100 text-red-800',
                            'not marked': 'bg-amber-100 text-amber-800',
                            'not-marked': 'bg-amber-100 text-amber-800',
                            'going': 'bg-green-100 text-green-800',
                            'interested': 'bg-blue-100 text-blue-800'
                          };
                          const statusColor = statusColors[status] || 'bg-gray-100 text-gray-800';
                          const displayStatus = entry.status;
                        %>
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold <%= statusColor %>">
                          <%= displayStatus %>
                        </span>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap">
                        <% if (entry.event_name) { %>
                          <div class="text-sm text-gray-900 font-medium"><%= entry.event_name %></div>
                          <div class="text-xs text-gray-500">
                            <%= new Date(entry.event_date).toLocaleDateString('en-US', { month: 'short', day: 'numeric' }) %>
                          </div>
                        <% } else { %>
                          <span class="text-sm text-gray-400">—</span>
                        <% } %>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap">
                        <div class="text-sm text-gray-600">
                          <%= new Date(entry.date).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) %>
                        </div>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap">
                        <% 
                          const eventStatus = (entry.event_status || 'Scheduled').toLowerCase();
                          const isOngoing = eventStatus === 'ongoing';
                        %>
                        <% if (isOngoing && entry.event_id && entry.student_id) { %>
                          <% 
                            const currentStatus = (entry.status || 'Not Marked').toLowerCase();
                            const isPresent = currentStatus === 'present';
                            const isAbsent = currentStatus === 'absent';
                          %>
                          <div class="flex gap-2" id="attendance-buttons-<%= entry.event_id %>-<%= entry.student_id %>">
                            <button 
                              data-event-id="<%= entry.event_id %>"
                              data-student-id="<%= entry.student_id %>"
                              data-student-name="<%= entry.member_name %>"
                              data-action="Present"
                              class="mark-rsvp-attendance px-3 py-1.5 text-xs font-semibold rounded-lg transition-all duration-200 shadow-sm flex items-center gap-1 <%= isPresent ? 'bg-green-700 text-white cursor-not-allowed opacity-75' : 'bg-green-600 text-white hover:bg-green-700 hover:scale-105' %>"
                              <%= isPresent ? 'disabled' : '' %>
                            >
                              <i data-lucide="check" class="w-3 h-3"></i>
                              <%= isPresent ? 'Present ✓' : 'Present' %>
                            </button>
                            <button 
                              data-event-id="<%= entry.event_id %>"
                              data-student-id="<%= entry.student_id %>"
                              data-student-name="<%= entry.member_name %>"
                              data-action="Absent"
                              class="mark-rsvp-attendance px-3 py-1.5 text-xs font-semibold rounded-lg transition-all duration-200 shadow-sm flex items-center gap-1 <%= isAbsent ? 'bg-red-700 text-white cursor-not-allowed opacity-75' : 'bg-red-600 text-white hover:bg-red-700 hover:scale-105' %>"
                              <%= isAbsent ? 'disabled' : '' %>
                            >
                              <i data-lucide="x" class="w-3 h-3"></i>
                              <%= isAbsent ? 'Absent ✓' : 'Absent' %>
                            </button>
                          </div>
                        <% } else { %>
                          <span class="text-xs text-gray-400">Event <%= entry.event_status || 'Scheduled' %></span>
                        <% } %>
                      </td>
                    </tr>
                  <% }) %>
                <% } else { %>
                  <tr>
                    <td colspan="5" class="px-6 py-16">
                      <div class="bg-gray-50 border border-gray-200 rounded-2xl p-8 text-center">
                        <div class="flex flex-col items-center gap-4">
                          <div class="bg-gray-100 rounded-full p-4">
                            <i data-lucide="calendar-x" class="w-10 h-10 text-gray-400"></i>
                          </div>
                          <div class="space-y-2">
                            <p class="text-gray-600 font-semibold text-lg">No records found</p>
                            <p class="text-sm text-gray-500 max-w-md">No attendance records or RSVPs available.</p>
                          </div>
                        </div>
                      </div>
                    </td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </main>
  </div>

  <!-- Toasts -->
  <div id="toastContainer" class="fixed right-4 bottom-4 z-[10000] flex flex-col gap-2"></div>

  <style>
    @keyframes slideIn {
      from {
        opacity: 0;
        transform: translateY(10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    
    @keyframes fadeIn {
      from {
        opacity: 0;
      }
      to {
        opacity: 1;
      }
    }
    
    .attendance-row {
      animation: fadeIn 0.3s ease-out;
    }
    
    .attendance-row:hover {
      transform: translateY(-1px);
    }
  </style>

  <script>
    const renderLucideIcons = (options) => {
      if (window.lucide?.createIcons) {
        window.lucide.createIcons(options);
      } else if (window.lucide?.replace) {
        window.lucide.replace(options);
      }
    };

    // Initialize Lucide icons and event listeners
    document.addEventListener('DOMContentLoaded', () => {
      renderLucideIcons();
      
      // Add event listeners for RSVP attendance buttons
      const rsvpButtons = document.querySelectorAll('.mark-rsvp-attendance');
      console.log('[Attendance] Found', rsvpButtons.length, 'RSVP attendance buttons');
      
      rsvpButtons.forEach((button, index) => {
        button.addEventListener('click', function(e) {
          e.preventDefault();
          e.stopPropagation();
          
          const eventId = this.getAttribute('data-event-id');
          const studentId = this.getAttribute('data-student-id');
          const studentName = this.getAttribute('data-student-name');
          const status = this.getAttribute('data-action');
          
          console.log('[Attendance] Button clicked:', { eventId, studentId, studentName, status });
          console.log('[Attendance] Button element:', this);
          console.log('[Attendance] All data attributes:', {
            'data-event-id': this.getAttribute('data-event-id'),
            'data-student-id': this.getAttribute('data-student-id'),
            'data-student-name': this.getAttribute('data-student-name'),
            'data-action': this.getAttribute('data-action')
          });
          
          if (!eventId || eventId === 'null' || eventId === 'undefined' || eventId === '') {
            console.error('[Attendance] Missing or invalid eventId:', eventId);
            showToast('Error: Event ID is missing. Please refresh the page.', 'error');
            return;
          }
          
          if (!studentId || studentId === 'null' || studentId === 'undefined' || studentId === '') {
            console.error('[Attendance] Missing or invalid studentId:', studentId);
            showToast('Error: Student ID is missing. Please refresh the page.', 'error');
            return;
          }
          
          if (!status || status === 'null' || status === 'undefined' || status === '') {
            console.error('[Attendance] Missing or invalid status:', status);
            showToast('Error: Status is missing. Please refresh the page.', 'error');
            return;
          }
          
          // Validate that IDs are valid numbers
          const eventIdNum = parseInt(eventId);
          const studentIdNum = parseInt(studentId);
          
          if (isNaN(eventIdNum) || eventIdNum <= 0) {
            console.error('[Attendance] Invalid eventId number:', eventId, eventIdNum);
            showToast('Error: Invalid Event ID. Please refresh the page.', 'error');
            return;
          }
          
          if (isNaN(studentIdNum) || studentIdNum <= 0) {
            console.error('[Attendance] Invalid studentId number:', studentId, studentIdNum);
            showToast('Error: Invalid Student ID. Please refresh the page.', 'error');
            return;
          }
          
          if (typeof window.markRSVPAttendance === 'function') {
            window.markRSVPAttendance(eventIdNum, studentIdNum, studentName, status);
          } else {
            console.error('[Attendance] markRSVPAttendance function not found');
            showToast('Attendance function not available. Please refresh.', 'error');
          }
        });
      });
    });

    // Add attendance form
    const addAttendanceForm = document.getElementById('addAttendanceForm');
    const addRecordBtn = document.getElementById('addRecordBtn');
    const addIcon = document.getElementById('addIcon');
    const addBtnText = document.getElementById('addBtnText');
    
    if (addAttendanceForm) {
      addAttendanceForm.addEventListener('submit', async (e) => {
        e.preventDefault();
        const memberName = document.getElementById('memberNameInput').value;
        const status = document.getElementById('statusSelect').value;

        // Show loading state
        if (addRecordBtn) {
          addRecordBtn.disabled = true;
          addRecordBtn.classList.add('opacity-75', 'cursor-not-allowed');
