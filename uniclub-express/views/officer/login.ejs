<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="icon" href="https://phshirt.com/wp-content/uploads/2022/01/UM-Tagum-College-1950.png" type="image/x-icon">
  <title>Officer Login • UniClub Management</title>

  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            brandRed: '#c62828',
            brandOrange: '#ef6c00',
            ink: '#1f2933',
            subtle: '#6b7280',
          },
          fontFamily: {
            ui: ['Inter', 'system-ui', 'sans-serif'],
          },
        }
      }
    }
  </script>

  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap');
    
    body {
      background: linear-gradient(135deg, #0f172a 0%, #1e293b 50%, #334155 100%);
      min-height: 100vh;
    }

    body::before {
      content: "";
      position: fixed;
      inset: 0;
      background: url("/img/MfL6WWSk.jpg") center/cover no-repeat;
      background-attachment: fixed;
      filter: saturate(0.7) brightness(0.75);
      z-index: -2;
    }
    body::after {
      content: "";
      position: fixed;
      inset: 0;
      background: linear-gradient(135deg, rgba(198,40,40,0.94), rgba(239,108,0,0.88));
      mix-blend-mode: multiply;
      z-index: -1;
    }

    @keyframes slideDown {
      from { opacity: 0; transform: translateY(-20px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    @keyframes fadeInUp {
      from { opacity: 0; transform: translateY(30px); }
      to { opacity: 1; transform: translateY(0); }
    }

    @keyframes glow {
      0%, 100% { box-shadow: 0 0 20px rgba(198, 40, 40, 0.3); }
      50% { box-shadow: 0 0 40px rgba(239, 108, 0, 0.6); }
    }

    .slide-down { animation: slideDown 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards; }
    .fade-in-up { animation: fadeInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards; }
    
    .officer-card {
      background: linear-gradient(145deg, rgba(255, 255, 255, 0.95) 0%, rgba(255, 255, 255, 0.98) 100%);
      border: 1px solid rgba(198, 40, 40, 0.2);
      box-shadow: 
        0 20px 60px rgba(0, 0, 0, 0.3),
        inset 0 1px 0 rgba(255, 255, 255, 0.9);
    }

    .input-field {
      background: rgba(255, 255, 255, 0.95);
      border: 1px solid rgba(148, 163, 184, 0.3);
      transition: all 0.3s ease;
      color: #1f2933;
    }
    
    .input-field::placeholder {
      color: #64748b;
    }
    
    .input-field:focus {
      background: rgba(255, 255, 255, 1);
      border-color: #c62828;
      box-shadow: 0 0 0 3px rgba(198, 40, 40, 0.2);
      outline: none;
    }

    .btn-officer {
      background: linear-gradient(135deg, #801515 0%, #d75a06 100%);
      transition: all 0.3s ease;
      box-shadow: 0 4px 20px rgba(198, 40, 40, 0.4);
      position: relative;
      overflow: hidden;
    }

    .btn-officer::after {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      width: 0;
      height: 0;
      border-radius: 50%;
      background: rgba(255, 255, 255, 0.2);
      transform: translate(-50%, -50%);
      transition: width 0.6s, height 0.6s;
    }

    .btn-officer:hover::after {
      width: 300px;
      height: 300px;
    }
    
    .btn-officer:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 30px rgba(198, 40, 40, 0.6);
    }
    
    .btn-officer:active {
      transform: translateY(0);
    }

    .logo-glow {
      animation: glow 3s ease-in-out infinite;
    }

    .badge-officer {
      background: linear-gradient(135deg, #c62828 0%, #ef6c00 100%);
      box-shadow: 0 4px 15px rgba(198, 40, 40, 0.4);
    }

    .divider {
      background: linear-gradient(90deg, transparent, rgba(198, 40, 40, 0.5), transparent);
    }

    .feature-box {
      background: rgba(255, 255, 255, 0.1);
      border: 1px solid rgba(255, 255, 255, 0.2);
      transition: all 0.3s ease;
    }

    .feature-box:hover {
      background: rgba(255, 255, 255, 0.15);
      border-color: rgba(198, 40, 40, 0.5);
      transform: translateY(-2px);
    }

    .alert-success {
      background: linear-gradient(135deg, rgba(16, 185, 129, 0.15) 0%, rgba(5, 150, 105, 0.15) 100%);
      border-left: 3px solid #10b981;
    }

    .alert-error {
      background: linear-gradient(135deg, rgba(239, 68, 68, 0.15) 0%, rgba(220, 38, 38, 0.15) 100%);
      border-left: 3px solid #ef4444;
    }

    .text-glow {
      text-shadow: 0 0 20px rgba(198, 40, 40, 0.5);
    }
  </style>
</head>

<body class="min-h-screen font-ui text-white flex items-center justify-center px-4 py-8">

  <div class="w-full max-w-6xl">
    
    <!-- Top Bar -->
    <header class="slide-down mb-12 flex items-center justify-between">
      <div class="flex items-center gap-4">
        <div class="w-14 h-14 flex items-center justify-center p-2">
          <img src="/img/logo.png" alt="UniClub Logo" class="w-full h-full object-contain">
        </div>
        <div>
          <p class="text-xs uppercase tracking-[0.3em] text-white/80 font-semibold mb-1">Officer Access</p>
          <h1 class="text-2xl font-bold text-white">UniClub Management</h1>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <div class="grid lg:grid-cols-[1fr,1.1fr] gap-12 items-start">
      
      <!-- Left Side - Information -->
      <div class="fade-in-up space-y-8" style="animation-delay: 0.1s;">
        
        <!-- Main Heading -->
        <div class="space-y-4">
          <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/10 border border-white/30">
            <div class="w-2 h-2 rounded-full bg-red-400 animate-pulse"></div>
            <span class="text-xs font-semibold text-white/90 uppercase tracking-wider">
              Authorized Personnel Only
            </span>
          </div>
          
          <h2 class="text-4xl lg:text-5xl font-black leading-tight text-white">
            Officer Portal
          </h2>
          
          <p class="text-lg text-white/90 leading-relaxed">
            Secure administrative access for managing organizations, events, and member activities at University of Mindanao.
          </p>
        </div>

        <!-- Divider -->
        <div class="divider h-[2px] w-32"></div>

        <!-- Security Features -->
        <div class="space-y-4">
          <h3 class="text-sm font-bold uppercase tracking-wider text-white/70">
            Portal Features
          </h3>
          
          <div class="space-y-3">
            <div class="feature-box p-4 rounded-xl">
              <div class="flex items-start gap-3">
                <div class="w-10 h-10 rounded-lg bg-white/20 flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                  </svg>
                </div>
                <div>
                  <p class="font-semibold text-white mb-1">Secure Authentication</p>
                  <p class="text-sm text-white/70">Protected access with encrypted credentials</p>
                </div>
              </div>
            </div>

            <div class="feature-box p-4 rounded-xl">
              <div class="flex items-start gap-3">
                <div class="w-10 h-10 rounded-lg bg-white/20 flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                  </svg>
                </div>
                <div>
                  <p class="font-semibold text-white mb-1">Advanced Analytics</p>
                  <p class="text-sm text-white/70">Real-time insights and reporting tools</p>
                </div>
              </div>
            </div>

            <div class="feature-box p-4 rounded-xl">
              <div class="flex items-start gap-3">
                <div class="w-10 h-10 rounded-lg bg-white/20 flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
                  </svg>
                </div>
                <div>
                  <p class="font-semibold text-white mb-1">Member Management</p>
                  <p class="text-sm text-white/70">Full control over memberships and roles</p>
                </div>
              </div>
            </div>

            <div class="feature-box p-4 rounded-xl">
              <div class="flex items-start gap-3">
                <div class="w-10 h-10 rounded-lg bg-white/20 flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                  </svg>
                </div>
                <div>
                  <p class="font-semibold text-white mb-1">Event Creation</p>
                  <p class="text-sm text-white/70">Create and manage campus events</p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Support -->
        <div class="pt-4">
          <p class="text-xs text-white/60">
            Need help? Contact IT Support at <span class="text-white/90">support@umindanao.edu.ph</span>
          </p>
        </div>
      </div>

      <!-- Right Side - Login Form -->
      <div class="fade-in-up" style="animation-delay: 0.2s;">
        <div class="officer-card rounded-3xl p-8 lg:p-10">
          
          <!-- Form Header -->
          <div class="text-center mb-8">
            <div class="w-16 h-16 mx-auto mb-4 flex items-center justify-center p-3">
              <img src="/img/logo.png" alt="UniClub Logo" class="w-full h-full object-contain">
            </div>
            <h3 class="text-2xl font-bold text-gray-800 mb-2">Officer Sign In</h3>
            <p class="text-gray-600 text-sm">
              Enter your administrative credentials
            </p>
          </div>

          <!-- Success Alert -->
          <div id="successMessage" class="hidden alert-success rounded-xl p-4 mb-6">
            <div class="flex items-start gap-3">
              <svg class="w-5 h-5 text-green-600 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <div>
                <p class="font-semibold text-green-800 text-sm mb-1">Password Reset Successful</p>
                <p class="text-green-700 text-sm">You can now sign in with your new password.</p>
              </div>
            </div>
          </div>

          <!-- Error Alert -->
          <div id="errorMessage" class="hidden alert-error rounded-xl p-4 mb-6">
            <div class="flex items-start gap-3">
              <svg class="w-5 h-5 text-red-600 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
              </svg>
              <div>
                <p class="font-semibold text-red-800 text-sm mb-1">Authentication Failed</p>
                <p class="text-red-700 text-sm" id="errorText">Invalid credentials. Please try again.</p>
              </div>
            </div>
          </div>

          <!-- EJS Error Message -->
          <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert-error rounded-xl p-4 mb-6">
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-red-600 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                </svg>
                <div>
                  <p class="font-semibold text-red-800 text-sm mb-1">Authentication Failed</p>
                  <p class="text-red-700 text-sm"><%= error %></p>
                </div>
              </div>
            </div>
          <% } %>

          <!-- EJS Success Message -->
          <% if (typeof passwordReset !== 'undefined' && passwordReset === 'success') { %>
            <div class="alert-success rounded-xl p-4 mb-6">
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-green-600 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <div>
                  <p class="font-semibold text-green-800 text-sm mb-1">Password Reset Successful</p>
                  <p class="text-green-700 text-sm">You can now sign in with your new password.</p>
                </div>
              </div>
            </div>
          <% } %>

          <!-- Login Form -->
          <form action="/officer/login" method="POST" class="space-y-6" id="loginForm">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <!-- Email -->
            <div>
              <label class="block text-sm font-bold text-gray-800 mb-3 uppercase tracking-wide">
                UMindanao Email
              </label>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                  <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                </div>
                <input
                  type="email"
                  id="email"
                  name="email"
                  placeholder="Enter your UMindanao email"
                  required
                  class="input-field w-full pl-12 pr-4 py-4 text-sm rounded-xl font-medium"
                />
              </div>
            </div>

            <!-- Password -->
            <div>
              <label class="block text-sm font-bold text-gray-800 mb-3 uppercase tracking-wide">
                Password
              </label>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                  <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                  </svg>
                </div>
                <input
                  type="password"
                  id="password"
                  name="password"
                  placeholder="Enter your password"
                  required
                  class="input-field w-full pl-12 pr-12 py-4 text-sm rounded-xl font-medium"
                />
                <button
                  type="button"
                  onclick="togglePassword()"
                  class="absolute right-4 top-1/2 -translate-y-1/2 text-gray-400 hover:text-brandRed transition-colors"
                >
                  <svg id="eyeIcon" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                  </svg>
                  <svg id="eyeOffIcon" class="w-5 h-5 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"/>
                  </svg>
                </button>
              </div>
            </div>

            <!-- Forgot Password -->
            <div class="flex items-center justify-end">
              <a href="/officer/forgot-password" class="text-sm font-semibold text-brandRed hover:text-brandOrange transition-colors">
                Forgot password?
              </a>
            </div>

            <!-- Submit Button -->
            <button
              type="submit"
              class="btn-officer w-full py-4 text-base font-bold tracking-wide rounded-xl text-white uppercase relative z-10"
            >
              Log in
            </button>
          </form>

          <!-- Sign Up Link -->
          <div class="mt-6 text-center">
            <p class="text-sm text-gray-600">
              Don't have an account? 
              <a href="/officer/signup" class="font-semibold text-brandRed hover:text-brandOrange transition-colors">
                Sign up here
              </a>
            </p>
          </div>

          <!-- Footer -->
          <div class="mt-8 pt-6 border-t border-gray-200">
            <div class="text-center space-y-2">
              <p class="text-sm font-semibold text-gray-700">
                UniClub Management System
              </p>
              <p class="text-xs text-gray-500">
                Officer Portal • University of Mindanao
              </p>
              <p class="text-xs text-gray-400 mt-2">
                &copy; <span id="currentYear">2024</span> All Rights Reserved
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Set current year
    document.getElementById('currentYear').textContent = new Date().getFullYear();

    function togglePassword() {
      const input = document.getElementById('password');
      const eyeIcon = document.getElementById('eyeIcon');
      const eyeOffIcon = document.getElementById('eyeOffIcon');
      
      if (input.type === 'password') {
        input.type = 'text';
        eyeIcon.classList.add('hidden');
        eyeOffIcon.classList.remove('hidden');
      } else {
        input.type = 'password';
        eyeIcon.classList.remove('hidden');
        eyeOffIcon.classList.add('hidden');
      }
    }

    // Check for URL parameters
    window.addEventListener('DOMContentLoaded', () => {
      const urlParams = new URLSearchParams(window.location.search);
      
      if (urlParams.get('passwordReset') === 'success') {
        document.getElementById('successMessage').classList.remove('hidden');
      }
      
      if (urlParams.get('error')) {
        const errorMessage = document.getElementById('errorMessage');
        const errorText = document.getElementById('errorText');
        errorMessage.classList.remove('hidden');
        errorText.textContent = decodeURIComponent(urlParams.get('error'));
      }
    });
  </script>

</body>
</html>
