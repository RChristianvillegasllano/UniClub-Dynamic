<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title || 'Finance Management | UniClub' %></title>
  <link rel="icon" href="https://phshirt.com/wp-content/uploads/2022/01/UM-Tagum-College-1950.png" type="image/x-icon">
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    const renderLucideIcons = (options) => {
      if (window.lucide?.createIcons) {
        window.lucide.createIcons(options);
      } else if (window.lucide?.replace) {
        window.lucide.replace(options);
      }
    };

    tailwind.config = {
      theme: {
        extend: {
          fontFamily: { sans: ['Inter', 'ui-sans-serif', 'system-ui', 'Segoe UI', 'sans-serif'] },
          colors: {
            primary: { 700: '#7a0e0e', 800: '#6a0c0c', 900: '#5b0a0a' }
          }
        }
      }
    };
  </script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <script src="https://unpkg.com/lucide@latest"></script>
</head>
<body class="font-sans antialiased bg-gradient-to-br from-gray-50 to-gray-100">
  <div class="flex h-screen">
    <%- include('./partials/sidebar', {
      activePage: 'finance',
      club: (typeof club !== 'undefined' ? club : null),
      accessiblePages: (typeof accessiblePages !== 'undefined' ? accessiblePages : []),
      officer: (typeof officer !== 'undefined' ? officer : null)
    }) %>

    <main class="flex-1 overflow-auto">
      <header class="bg-white/90 backdrop-blur border-b border-gray-200 sticky top-0 z-10">
        <div class="px-6 md:px-8 py-4 flex items-center justify-between">
          <div>
            <h1 class="text-2xl md:text-3xl font-extrabold text-gray-900 tracking-tight">
              Finance Management
            </h1>
            <p class="text-gray-500 mt-1 text-sm">
              <% if (isAuditor) { %>
                Review expenses, manage budget, and ensure financial compliance.
              <% } else { %>
                Track expenses, manage budget, and submit financial reports.
              <% } %>
            </p>
          </div>
          <div class="flex flex-wrap gap-3">
            <button class="inline-flex items-center gap-2 px-4 py-2 text-sm font-semibold rounded-xl border border-gray-200 text-gray-700 hover:bg-gray-50">
              <i data-lucide="download" class="w-4 h-4"></i>
              Export
            </button>
          </div>
        </div>
      </header>

      <div class="p-6 md:p-8 space-y-8">
        <!-- Summary Cards -->
        <section class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-4">
          <div class="bg-white rounded-2xl p-5 shadow-sm border border-gray-100">
            <div class="flex items-center gap-3 mb-3">
              <span class="w-10 h-10 rounded-2xl bg-amber-500/10 text-amber-900 flex items-center justify-center">
                <i data-lucide="file-check" class="w-5 h-5"></i>
              </span>
              <div>
                <p class="text-xs uppercase tracking-wide text-gray-500">Pending Reviews</p>
                <p class="text-xs text-gray-400">Awaiting approval</p>
              </div>
            </div>
            <h3 class="text-3xl font-extrabold text-gray-900"><%= (pendingExpenses && pendingExpenses.length) || 0 %></h3>
          </div>
          
          <div class="bg-white rounded-2xl p-5 shadow-sm border border-gray-100">
            <div class="flex items-center gap-3 mb-3">
              <span class="w-10 h-10 rounded-2xl bg-blue-500/10 text-blue-900 flex items-center justify-center">
                <i data-lucide="pie-chart" class="w-5 h-5"></i>
              </span>
              <div>
                <p class="text-xs uppercase tracking-wide text-gray-500">Budget Used</p>
                <p class="text-xs text-gray-400"><%= budgetUtilization || 0 %>% utilized</p>
              </div>
            </div>
            <h3 class="text-3xl font-extrabold text-gray-900">₱<%= (totalSpent || 0).toLocaleString() %></h3>
            <p class="text-xs text-gray-500 mt-1">of ₱<%= (totalBudget || 0).toLocaleString() %></p>
          </div>
          
          <div class="bg-white rounded-2xl p-5 shadow-sm border border-gray-100">
            <div class="flex items-center gap-3 mb-3">
              <span class="w-10 h-10 rounded-2xl bg-purple-500/10 text-purple-900 flex items-center justify-center">
                <i data-lucide="file-text" class="w-5 h-5"></i>
              </span>
              <div>
                <p class="text-xs uppercase tracking-wide text-gray-500">Reports Due</p>
                <p class="text-xs text-gray-400">This month</p>
              </div>
            </div>
            <h3 class="text-3xl font-extrabold text-gray-900">
              <%= (reports && reports.filter(r => r.status !== 'approved' && new Date(r.due_date) <= new Date()).length) || 0 %>
            </h3>
          </div>
          
          <div class="bg-white rounded-2xl p-5 shadow-sm border border-gray-100">
            <div class="flex items-center gap-3 mb-3">
              <span class="w-10 h-10 rounded-2xl bg-red-500/10 text-red-900 flex items-center justify-center">
                <i data-lucide="alert-triangle" class="w-5 h-5"></i>
              </span>
              <div>
                <p class="text-xs uppercase tracking-wide text-gray-500">Compliance Issues</p>
                <p class="text-xs text-gray-400">Open issues</p>
              </div>
            </div>
            <h3 class="text-3xl font-extrabold text-gray-900">
              <%= (complianceIssues && complianceIssues.filter(ci => ci.status === 'open' || ci.status === 'in_review').length) || 0 %>
            </h3>
          </div>
        </section>

        <!-- Tabs -->
        <div class="bg-white rounded-2xl border border-gray-100 shadow-sm">
          <div class="border-b border-gray-200">
            <nav class="flex -mb-px" id="financeTabs">
              <button class="tab-btn active px-6 py-4 text-sm font-semibold text-gray-700 border-b-2 border-red-700" data-tab="pending">
                Pending Expenses (<%= (pendingExpenses && pendingExpenses.length) || 0 %>)
              </button>
              <button class="tab-btn px-6 py-4 text-sm font-semibold text-gray-500 hover:text-gray-700" data-tab="budget">
                Budget Overview
              </button>
              <button class="tab-btn px-6 py-4 text-sm font-semibold text-gray-500 hover:text-gray-700" data-tab="reports">
                Reports & Compliance
              </button>
              <button class="tab-btn px-6 py-4 text-sm font-semibold text-gray-500 hover:text-gray-700" data-tab="transactions">
                All Transactions
              </button>
              <% if (isAuditor) { %>
              <button class="tab-btn px-6 py-4 text-sm font-semibold text-gray-500 hover:text-gray-700" data-tab="audit">
                Audit History
              </button>
              <% } %>
            </nav>
          </div>

          <!-- Tab Content -->
          <div class="p-6">
            <!-- Pending Expenses Tab -->
            <div id="tab-pending" class="tab-content">
              <div class="mb-4 flex items-center justify-between">
                <h2 class="text-xl font-bold text-gray-800">Pending Expense Reviews</h2>
                <span class="text-sm text-gray-500"><%= (pendingExpenses && pendingExpenses.length) || 0 %> items</span>
              </div>
              
              <% if (pendingExpenses && pendingExpenses.length > 0) { %>
                <div class="space-y-4">
                  <% pendingExpenses.forEach(function(expense) { %>
                    <div class="bg-gray-50 rounded-xl border border-gray-200 p-5 hover:shadow-md transition-all">
                      <div class="flex items-start justify-between mb-4">
                        <div class="flex-1">
                          <h3 class="text-lg font-bold text-gray-900 mb-1"><%= expense.title || 'Untitled Expense' %></h3>
                          <p class="text-sm text-gray-600 mb-2"><%= expense.description || 'No description' %></p>
                          <div class="flex flex-wrap gap-3 text-xs text-gray-500">
                            <span class="flex items-center gap-1">
                              <i data-lucide="tag" class="w-3 h-3"></i>
                              <%= expense.category || 'Uncategorized' %>
                            </span>
                            <span class="flex items-center gap-1">
                              <i data-lucide="user" class="w-3 h-3"></i>
                              <%= expense.submitted_by_name || 'Unknown' %>
                            </span>
                            <span class="flex items-center gap-1">
                              <i data-lucide="calendar" class="w-3 h-3"></i>
                              <%= new Date(expense.created_at).toLocaleDateString() %>
                            </span>
                          </div>
                        </div>
                        <div class="text-right ml-4">
                          <p class="text-2xl font-bold text-gray-900 mb-1">₱<%= Number(expense.amount || 0).toLocaleString() %></p>
                          <span class="inline-flex items-center gap-1 px-2 py-1 rounded-full text-xs font-semibold bg-amber-100 text-amber-700">
                            Pending
                          </span>
                        </div>
                      </div>
                      
                      <% if (expense.receipt_url) { %>
                        <div class="mb-4">
                          <a href="<%= expense.receipt_url %>" target="_blank" class="text-sm text-blue-600 hover:underline flex items-center gap-1">
                            <i data-lucide="file" class="w-4 h-4"></i>
                            View Receipt
                          </a>
                        </div>
                      <% } %>
                      
                      <% if (isAuditor) { %>
                        <div class="flex gap-3 pt-4 border-t border-gray-200">
                          <button onclick="approveExpense(<%= expense.id %>)" class="flex-1 bg-green-600 text-white py-2 px-4 rounded-lg font-semibold hover:bg-green-700 transition-colors flex items-center justify-center gap-2">
                            <i data-lucide="check" class="w-4 h-4"></i>
                            Approve
                          </button>
                          <button onclick="rejectExpense(<%= expense.id %>)" class="flex-1 bg-red-600 text-white py-2 px-4 rounded-lg font-semibold hover:bg-red-700 transition-colors flex items-center justify-center gap-2">
                            <i data-lucide="x" class="w-4 h-4"></i>
                            Reject
                          </button>
                        </div>
                      <% } %>
                    </div>
                  <% }) %>
                </div>
              <% } else { %>
                <div class="text-center py-12">
                  <i data-lucide="check-circle" class="w-16 h-16 text-green-500 mx-auto mb-4"></i>
                  <p class="text-lg font-semibold text-gray-700 mb-2">All caught up!</p>
                  <p class="text-sm text-gray-500">No pending expenses to review.</p>
                </div>
              <% } %>
            </div>

            <!-- Budget Overview Tab -->
            <div id="tab-budget" class="tab-content hidden">
              <div class="mb-6">
                <h2 class="text-xl font-bold text-gray-800 mb-4">Budget Overview</h2>
                
                <% if (budget) { %>
                  <div class="bg-gradient-to-r from-blue-50 to-blue-100 rounded-xl p-6 border border-blue-200">
                    <div class="flex items-center justify-between mb-4">
                      <div>
                        <p class="text-sm text-gray-600 mb-1">Fiscal Year <%= budget.fiscal_year || new Date().getFullYear() %></p>
                        <p class="text-3xl font-bold text-gray-900">₱<%= totalBudget.toLocaleString() %></p>
                      </div>
                      <div class="text-right">
                        <p class="text-sm text-gray-600 mb-1">Utilization</p>
                        <p class="text-3xl font-bold text-blue-600"><%= budgetUtilization %>%</p>
                      </div>
                    </div>
                    
                    <div class="mb-4">
                      <div class="flex justify-between text-sm text-gray-700 mb-2">
                        <span>Spent: ₱<%= totalSpent.toLocaleString() %></span>
                        <span>Remaining: ₱<%= (totalBudget - totalSpent).toLocaleString() %></span>
                      </div>
                      <div class="w-full bg-gray-200 rounded-full h-4 overflow-hidden">
                        <div class="bg-gradient-to-r from-blue-500 to-blue-400 h-4 rounded-full transition-all duration-700" style="width: <%= Math.min(budgetUtilization, 100) %>%"></div>
                      </div>
                    </div>
                    
                    <% if (budget.notes) { %>
                      <p class="text-sm text-gray-600"><%= budget.notes %></p>
                    <% } %>
                  </div>
                <% } else { %>
                  <div class="bg-gray-50 rounded-xl p-6 border border-gray-200 text-center">
                    <i data-lucide="wallet" class="w-12 h-12 text-gray-400 mx-auto mb-3"></i>
                    <p class="text-gray-600 mb-2">No budget allocated for this fiscal year.</p>
                    <p class="text-sm text-gray-500">Contact administration to set up a budget.</p>
                  </div>
                <% } %>
              </div>
            </div>

            <!-- Reports & Compliance Tab -->
            <div id="tab-reports" class="tab-content hidden">
              <div class="mb-6">
                <h2 class="text-xl font-bold text-gray-800 mb-4">Financial Reports</h2>
                
                <% if (reports && reports.length > 0) { %>
                  <div class="space-y-3 mb-6">
                    <% reports.forEach(function(report) { %>
                      <div class="bg-gray-50 rounded-xl border border-gray-200 p-4 hover:bg-gray-100 transition-colors">
                        <div class="flex items-center justify-between">
                          <div>
                            <p class="font-semibold text-gray-800"><%= report.title || (report.report_type ? report.report_type.charAt(0).toUpperCase() + report.report_type.slice(1) + ' Report' : 'Financial Report') %></p>
                            <p class="text-sm text-gray-500">
                              Due: <%= new Date(report.due_date).toLocaleDateString() %>
                              <% if (report.period_start && report.period_end) { %>
                                • Period: <%= new Date(report.period_start).toLocaleDateString() %> - <%= new Date(report.period_end).toLocaleDateString() %>
                              <% } %>
                            </p>
                          </div>
                          <span class="px-3 py-1 rounded-full text-xs font-semibold <%= report.status === 'approved' ? 'bg-green-100 text-green-700' : (report.status === 'submitted' ? 'bg-blue-100 text-blue-700' : 'bg-amber-100 text-amber-700') %>">
                            <%= report.status || 'Pending' %>
                          </span>
                        </div>
                      </div>
                    <% }) %>
                  </div>
                <% } else { %>
                  <p class="text-gray-500 text-center py-8">No financial reports found.</p>
                <% } %>
              </div>
              
              <div class="mb-6">
                <h2 class="text-xl font-bold text-gray-800 mb-4">Compliance Issues</h2>
                
                <% if (complianceIssues && complianceIssues.length > 0) { %>
                  <div class="space-y-3">
                    <% complianceIssues.forEach(function(issue) { %>
                      <div class="bg-gray-50 rounded-xl border border-gray-200 p-4 hover:bg-gray-100 transition-colors">
                        <div class="flex items-start justify-between">
                          <div class="flex-1">
                            <div class="flex items-center gap-2 mb-2">
                              <h3 class="font-semibold text-gray-800"><%= issue.title %></h3>
                              <span class="px-2 py-0.5 rounded-full text-xs font-semibold <%= issue.severity === 'critical' ? 'bg-red-100 text-red-700' : (issue.severity === 'high' ? 'bg-orange-100 text-orange-700' : (issue.severity === 'medium' ? 'bg-yellow-100 text-yellow-700' : 'bg-blue-100 text-blue-700')) %>">
                                <%= issue.severity || 'medium' %>
                              </span>
                            </div>
                            <p class="text-sm text-gray-600 mb-2"><%= issue.description || 'No description' %></p>
                            <p class="text-xs text-gray-500">
                              <%= issue.issue_type %> • Flagged <%= new Date(issue.flagged_at).toLocaleDateString() %>
                            </p>
                          </div>
                          <span class="px-3 py-1 rounded-full text-xs font-semibold <%= issue.status === 'resolved' ? 'bg-green-100 text-green-700' : (issue.status === 'in_review' ? 'bg-blue-100 text-blue-700' : 'bg-red-100 text-red-700') %>">
                            <%= issue.status || 'Open' %>
                          </span>
                        </div>
                      </div>
                    <% }) %>
                  </div>
                <% } else { %>
                  <p class="text-gray-500 text-center py-8">No compliance issues found.</p>
                <% } %>
              </div>
            </div>

            <!-- All Transactions Tab -->
            <div id="tab-transactions" class="tab-content hidden">
              <div class="mb-4 flex items-center justify-between">
                <h2 class="text-xl font-bold text-gray-800">All Transactions</h2>
                <div class="flex items-center gap-3">
                  <select onchange="filterExpenses(this.value)" class="px-3 py-2 border rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-red-600">
                    <option value="all">All Status</option>
                    <option value="pending">Pending</option>
                    <option value="approved">Approved</option>
                    <option value="rejected">Rejected</option>
                  </select>
                  <span class="text-sm text-gray-500"><%= (allExpenses && allExpenses.length) || 0 %> total</span>
                </div>
              </div>
              
              <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                  <thead class="bg-gray-50">
                    <tr>
                      <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wide">Transaction</th>
                      <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wide">Amount</th>
                      <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wide">Category</th>
                      <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wide">Status</th>
                      <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wide">Date</th>
                    </tr>
                  </thead>
                  <tbody class="bg-white divide-y divide-gray-200">
                    <% if (allExpenses && allExpenses.length > 0) { %>
                      <% allExpenses.forEach(function(expense) { %>
                        <tr class="hover:bg-gray-50">
                          <td class="px-6 py-4 whitespace-nowrap">
                            <div>
                              <p class="text-sm font-semibold text-gray-900"><%= expense.title || 'Untitled' %></p>
                              <p class="text-xs text-gray-500"><%= expense.submitted_by_name || 'Unknown' %></p>
                            </div>
                          </td>
                          <td class="px-6 py-4 whitespace-nowrap">
                            <span class="text-sm font-bold text-gray-900">₱<%= Number(expense.amount || 0).toLocaleString() %></span>
                          </td>
                          <td class="px-6 py-4 whitespace-nowrap">
                            <span class="px-2 py-1 rounded-full text-xs font-semibold bg-blue-50 text-blue-700"><%= expense.category || 'Uncategorized' %></span>
                          </td>
                          <td class="px-6 py-4 whitespace-nowrap">
                            <span class="px-2 py-1 rounded-full text-xs font-semibold <%= expense.status === 'approved' ? 'bg-green-100 text-green-700' : (expense.status === 'rejected' ? 'bg-red-100 text-red-700' : 'bg-amber-100 text-amber-700') %>">
                              <%= expense.status || 'Pending' %>
                            </span>
                          </td>
                          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            <%= new Date(expense.created_at).toLocaleDateString() %>
                          </td>
                        </tr>
                      <% }) %>
                    <% } else { %>
                      <tr>
                        <td colspan="5" class="px-6 py-12 text-center text-gray-500">
                          <i data-lucide="file-x" class="w-12 h-12 mx-auto mb-3 text-gray-400"></i>
                          <p>No transactions found.</p>
                        </td>
                      </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>

            <!-- Audit History Tab (Auditors only) -->
            <% if (isAuditor) { %>
            <div id="tab-audit" class="tab-content hidden">
              <div class="mb-4 flex items-center justify-between">
                <h2 class="text-xl font-bold text-gray-800">Audit History</h2>
                <span class="text-sm text-gray-500"><%= (auditLogs && auditLogs.length) || 0 %> entries</span>
              </div>
              
              <% if (auditLogs && auditLogs.length > 0) { %>
                <div class="space-y-3">
                  <% auditLogs.forEach(function(log) { %>
                    <div class="bg-gray-50 rounded-xl border border-gray-200 p-4 hover:bg-gray-100 transition-colors">
                      <div class="flex items-start gap-3">
                        <div class="w-2 h-2 <%= log.action_type && log.action_type.includes('approved') ? 'bg-green-600' : (log.action_type && log.action_type.includes('rejected') ? 'bg-red-600' : 'bg-blue-600') %> rounded-full mt-2"></div>
                        <div class="flex-1">
                          <p class="text-sm font-semibold text-gray-800"><%= log.description || log.action_type || 'Audit action' %></p>
                          <p class="text-xs text-gray-500 mt-1">
                            <% if (log.performed_by_name) { %>
                              by <%= log.performed_by_name %> • 
                            <% } %>
                            <%= new Date(log.created_at).toLocaleString() %>
                          </p>
                        </div>
                      </div>
                    </div>
                  <% }) %>
                </div>
              <% } else { %>
                <p class="text-gray-500 text-center py-12">No audit history found.</p>
              <% } %>
            </div>
            <% } %>
          </div>
        </div>
      </div>
    </main>
  </div>

  <script>
    const csrfToken = '<%= typeof csrfToken !== "undefined" ? csrfToken : "" %>';
    
    // Tab switching
    document.querySelectorAll('.tab-btn').forEach(btn => {
      btn.addEventListener('click', function() {
        const tabName = this.dataset.tab;
        
        // Update buttons
        document.querySelectorAll('.tab-btn').forEach(b => {
          b.classList.remove('active', 'text-gray-700', 'border-red-700');
          b.classList.add('text-gray-500');
        });
        this.classList.add('active', 'text-gray-700', 'border-b-2', 'border-red-700');
        this.classList.remove('text-gray-500');
        
        // Update content
        document.querySelectorAll('.tab-content').forEach(content => {
          content.classList.add('hidden');
        });
        document.getElementById('tab-' + tabName).classList.remove('hidden');
      });
    });

    // Show notification
    function showNotification(message, type = 'success') {
      const notification = document.createElement('div');
      notification.className = `fixed top-4 right-4 px-6 py-4 rounded-lg shadow-lg z-50 ${
        type === 'success' ? 'bg-green-500 text-white' : 'bg-red-500 text-white'
      }`;
      notification.textContent = message;
      document.body.appendChild(notification);
      
      setTimeout(() => {
        notification.style.opacity = '0';
        notification.style.transition = 'opacity 0.3s';
        setTimeout(() => notification.remove(), 300);
      }, 3000);
    }

    // Approve expense
    async function approveExpense(expenseId) {
      if (!confirm('Are you sure you want to approve this expense?')) return;
      
      const button = event.target.closest('button');
      const originalText = button.innerHTML;
      button.disabled = true;
      button.innerHTML = '<i data-lucide="loader" class="w-4 h-4 animate-spin"></i> Processing...';
      
      try {
        const response = await fetch(`/officer/finance/expense/${expenseId}/approve`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'X-CSRF-Token': csrfToken
          },
          credentials: 'same-origin',
          body: JSON.stringify({ _csrf: csrfToken })
        });
        
        const data = await response.json();
        
        if (data.success) {
          showNotification('Expense approved successfully!', 'success');
          setTimeout(() => location.reload(), 1000);
        } else {
          button.disabled = false;
          button.innerHTML = originalText;
          showNotification('Error: ' + (data.error || 'Failed to approve expense'), 'error');
        }
      } catch (error) {
        console.error('Error:', error);
        button.disabled = false;
        button.innerHTML = originalText;
        showNotification('An error occurred while approving the expense.', 'error');
      }
    }

    // Reject expense
    async function rejectExpense(expenseId) {
      const notes = prompt('Please provide a reason for rejection (optional):');
      if (notes === null) return; // User cancelled
      
      const button = event.target.closest('button');
      const originalText = button.innerHTML;
      button.disabled = true;
      button.innerHTML = '<i data-lucide="loader" class="w-4 h-4 animate-spin"></i> Processing...';
      
      try {
        const response = await fetch(`/officer/finance/expense/${expenseId}/reject`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'X-CSRF-Token': csrfToken
          },
          credentials: 'same-origin',
          body: JSON.stringify({ _csrf: csrfToken, notes: notes || '' }),
        });
        
        const data = await response.json();
        
        if (data.success) {
          showNotification('Expense rejected successfully!', 'success');
          setTimeout(() => location.reload(), 1000);
        } else {
          button.disabled = false;
          button.innerHTML = originalText;
          showNotification('Error: ' + (data.error || 'Failed to reject expense'), 'error');
        }
      } catch (error) {
        console.error('Error:', error);
        button.disabled = false;
        button.innerHTML = originalText;
        showNotification('An error occurred while rejecting the expense.', 'error');
      }
    }

    // Filter expenses by status
    function filterExpenses(status) {
      const rows = document.querySelectorAll('#tab-transactions tbody tr');
      rows.forEach(row => {
        const statusCell = row.querySelector('td:nth-child(4) span');
        if (statusCell) {
          const rowStatus = statusCell.textContent.trim().toLowerCase();
          if (status === 'all' || rowStatus === status) {
            row.style.display = '';
          } else {
            row.style.display = 'none';
          }
        }
      });
    }

    // Initialize icons
    document.addEventListener('DOMContentLoaded', () => {
      renderLucideIcons();
    });
  </script>
