    function deselectAllPermissions() {
      document.querySelectorAll('input[type="checkbox"][data-perm]').forEach(cb => cb.checked = false);
      updatePermissionsField();
    }

    function toggleSection(checkbox, sectionClass) {
      const checkboxes = document.querySelectorAll(`.${sectionClass}-perm`);
      checkboxes.forEach(cb => cb.checked = checkbox.checked);
      updatePermissionsField();
    }

    function loadRolePermissions(role) {
      const container = document.getElementById('permissionsContainer');
      if (!role) {
        container.classList.add('hidden');
        return;
      }

      container.classList.remove('hidden');
      deselectAllPermissions();

      const roleKey = role.toLowerCase();
      if (rolePermissions[roleKey]) {
        rolePermissions[roleKey].forEach(perm => {
          const checkbox = document.querySelector(`[data-perm="${perm}"]`);
          if (checkbox) checkbox.checked = true;
        });
      }
      updatePermissionsField();
    }

    function updatePermissionsField() {
      const permField = document.getElementById('permissionsField');
      const selected = [];
      document.querySelectorAll('input[type="checkbox"][data-perm]:checked').forEach(cb => {
        selected.push(cb.dataset.perm);
      });
      permField.value = JSON.stringify({ permissions: selected });
    }

    // Initialize permissions system
    (function(){
      const form = document.getElementById('officerForm');
      const roleSelect = form.querySelector('select[name="role"]');
      const roleOtherInput = document.getElementById('roleOther');
      const roleActualInput = document.getElementById('roleActual');
      const otherRoleContainer = document.getElementById('otherRoleContainer');
      const permField = document.getElementById('permissionsField');

      function getRoleValue() {
        if (roleSelect.value === 'Other' && roleOtherInput) {
          return roleOtherInput.value.trim();
        }
        return roleSelect.value;
      }

      function updateRoleActual() {
        if (roleActualInput) {
          roleActualInput.value = getRoleValue();
        }
      }

      // Handle role select change
      if (roleSelect) {
        roleSelect.addEventListener('change', function(e) {
          const selectedValue = e.target.value;
          if (selectedValue === 'Other') {
            otherRoleContainer.classList.remove('hidden');
            if (roleOtherInput) {
              roleOtherInput.required = true;
              roleOtherInput.focus();
            }
            loadRolePermissions('');
          } else {
            otherRoleContainer.classList.add('hidden');
            if (roleOtherInput) {
              roleOtherInput.required = false;
              roleOtherInput.value = '';
            }
            loadRolePermissions(selectedValue);
            updateRoleActual();
          }
        });
      }

      // Handle "Other" role input change
      if (roleOtherInput) {
        roleOtherInput.addEventListener('input', function(e) {
          loadRolePermissions(e.target.value);
          updateRoleActual();
        });
      }

      // Update permissions field when any checkbox changes
      document.querySelectorAll('input[type="checkbox"][data-perm]').forEach(cb => {
        cb.addEventListener('change', updatePermissionsField);
      });

      // Load existing permissions if any
      let existingPermissions = {};
      try {
        existingPermissions = JSON.parse(permField.value || '{}');
      } catch (err) {
        existingPermissions = {};
      }

      // Initialize permissions
      if (existingPermissions.permissions && Array.isArray(existingPermissions.permissions)) {
        existingPermissions.permissions.forEach(perm => {
          const checkbox = document.querySelector(`[data-perm="${perm}"]`);
          if (checkbox) checkbox.checked = true;
        });
        updatePermissionsField();
      } else {
        const currentRole = getRoleValue();
        if (currentRole) {
          loadRolePermissions(currentRole);
        }
      }

      // Initialize role actual value
      updateRoleActual();

      // Handle form submission
      form.addEventListener('submit', function(e) {
        updateRoleActual();
        updatePermissionsField();
        const roleValue = getRoleValue();
        if (!roleValue) {
          e.preventDefault();
          showToast('Please select or specify a role.', 'error', 'Validation Error');
          return false;
        }
        if (roleSelect.value === 'Other') {
          const otherValue = roleOtherInput ? roleOtherInput.value.trim() : '';
          if (!otherValue) {
            e.preventDefault();
            showToast('Please specify the role.', 'error', 'Validation Error');
            if (roleOtherInput) roleOtherInput.focus();
            return false;
          }
        }
        // Use role_actual as the primary field, remove name from select
        if (roleActualInput) {
          roleActualInput.name = 'role';
        }
        roleSelect.removeAttribute('name');
      });
    })();

    // Student ID validation: exactly 6 digits
    function validateStudentId() {
      const idInput = document.getElementById('studentid');
      let id = idInput.value.trim();
      
      // Remove any non-digit characters
      id = id.replace(/\D/g, '');
      idInput.value = id;
      
      const warningsDiv = document.getElementById('validationWarnings');
      const warningList = document.getElementById('warningList');
      
      if (id && id.length !== 6) {
        idInput.classList.add('border-red-500');
        idInput.classList.remove('border-slate-300');
        
        let idWarning = document.getElementById('idWarning');
        if (!idWarning) {
          idWarning = document.createElement('li');
          idWarning.id = 'idWarning';
          warningList.appendChild(idWarning);
        }
        idWarning.textContent = 'Student ID must be exactly 6 digits';
        
        warningsDiv.classList.remove('hidden');
        return false;
      } else {
        idInput.classList.remove('border-red-500');
        idInput.classList.add('border-slate-300');
        
        const idWarning = document.getElementById('idWarning');
        if (idWarning) {
          idWarning.remove();
        }
        
        // Hide warnings if no warnings left
        if (warningList.children.length === 0) {
          warningsDiv.classList.add('hidden');
        }
        return true;
      }
    }

    // Name validation: only letters, spaces, hyphens, and apostrophes
    function validateName(inputId, warningId) {
      const nameInput = document.getElementById(inputId);
      const name = nameInput.value.trim();
      const warningsDiv = document.getElementById('validationWarnings');
      const warningList = document.getElementById('warningList');
      
      // Pattern: only letters, spaces, hyphens, and apostrophes
      const namePattern = /^[A-Za-z\s'-]+$/;
      
      // Check for potentially malicious content (excluding apostrophe which is allowed)
      const dangerousPatterns = /[<>\"&;{}[\]()=+*$%#@!`~|\\]/;
      
      if (name && (dangerousPatterns.test(name) || !namePattern.test(name))) {
        nameInput.classList.add('border-red-500');
        nameInput.classList.remove('border-slate-300');
        
        let nameWarning = document.getElementById(warningId);
