          <% if (student.profile_picture) { %>
            <div class="flex items-center gap-4 bg-slate-50 border border-slate-200 rounded-lg p-3">
              <img src="<%= student.profile_picture %>" alt="Current photo" class="w-16 h-16 object-cover rounded-lg border border-slate-300" onerror="this.style.display='none'">
              <label class="flex items-center gap-2 text-sm text-red-600 cursor-pointer">
                <input type="checkbox" name="delete_photo" class="rounded">
                <span>Delete current photo</span>
              </label>
            </div>
          <% } %>
          <input type="file" name="photo" accept="image/jpeg,image/jpg,image/png,image/gif,image/webp"
            class="w-full px-4 py-2 border rounded-xl focus:ring-2 focus:ring-[#a10109d1] focus:border-[#a10109d1] focus:outline-none bg-white">
        </div>
        <div class="toast-close" onclick="this.parentElement.remove()">Ã—</div>
      `;

      container.appendChild(toast);

      setTimeout(() => {
        toast.style.animation = 'slideOutRight 0.3s ease-out';
        setTimeout(() => {
          if (toast.parentElement) {
            toast.remove();
          }
        }, 300);
      }, 5000);
    }
  </script>
