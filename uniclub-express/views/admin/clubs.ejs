<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Manage Clubs | UniClub Admin</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="icon" href="/img/uniclub-logo.png" />
  <script src="https://unpkg.com/lucide@latest"></script>
</head>

<body class="bg-gray-50 font-sans text-slate-800">
  <div class="min-h-screen grid grid-cols-[260px_1fr] gap-6 p-6">
    <!-- Sidebar (uniform) -->
    <%- include('../layouts/adminSidebar', { currentPath: (typeof currentPath !== 'undefined' ? currentPath : '/admin/clubs'), messages: (typeof messages !== 'undefined' ? messages : []) }) %>

    <!-- Main -->
    <main class="flex flex-col gap-4">
      <header class="mb-6 flex items-center justify-between">
        <div>
          <h1 class="text-2xl font-bold text-slate-800">Manage Clubs</h1>
          <p class="text-sm text-slate-500">View, edit, or register student clubs</p>
        </div>
        <a href="/admin/clubs/add"
           class="flex items-center gap-2 px-4 py-2 bg-[#a10109d1] text-white rounded-lg hover:bg-[#870107] transition">
          <i data-lucide="plus"></i> Add Club
        </a>
      </header>

      <section class="bg-white rounded-2xl border border-gray-200 shadow-sm p-6">
        <% if (clubs && clubs.length > 0) { %>
          <div class="overflow-x-auto">
            <table class="w-full border-collapse text-sm">
              <thead class="bg-slate-100 text-slate-700">
                <tr>
                  <th class="p-3 text-left font-semibold">Name</th>
                  <th class="p-3 text-left font-semibold">Department</th>
                  <th class="p-3 text-left font-semibold">Program</th>
                  <th class="p-3 text-left font-semibold">Adviser</th>
                  <th class="p-3 text-left font-semibold">Status</th>
                  <th class="p-3 text-center font-semibold">Actions</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-slate-200">
                <% clubs.forEach(c => { %>
                  <tr class="hover:bg-slate-50">
                    <td class="p-3"><%= c.name %></td>
                    <td class="p-3"><%= c.department || '—' %></td>
                    <td class="p-3"><%= c.program || '—' %></td>
                    <td class="p-3"><%= c.adviser || '—' %></td>
                    <td class="p-3"><span class="px-2 py-1 text-xs rounded <%= c.status === 'Active' ? 'bg-green-100 text-green-700' : 'bg-slate-200 text-slate-600' %>"><%= c.status %></span></td>
                    <td class="p-3 flex justify-center gap-2">
                      <a href="/admin/clubs/edit/<%= c.id %>" class="px-3 py-1 rounded-md bg-blue-500 text-white text-xs hover:bg-blue-600">
                        <i data-lucide="edit-3" class="w-3 h-3"></i> Edit
                      </a>
                      <form action="/admin/clubs/delete/<%= c.id %>" method="POST" onsubmit="return confirm('Delete this club?')">
                        <button type="submit"
                               class="px-3 py-1 rounded-md bg-red-500 text-white text-xs hover:bg-red-600">
                          <i data-lucide="trash-2" class="w-3 h-3"></i> Delete
                        </button>
                      </form>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <p class="text-center text-slate-500 py-6">No clubs found. Add your first club to get started!</p>
        <% } %>
      </section>

      <footer class="text-center text-xs text-slate-400 py-4 border-t mt-8">
        &copy; <%= new Date().getFullYear() %> UniClub Management System. All rights reserved.
      </footer>
    </main>
  </div>

  <script> window.lucide && window.lucide.replace(); </script>
</body>
</html>
