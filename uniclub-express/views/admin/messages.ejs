<!-- views/admin/messages.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Messages | UniClub Admin</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="icon" href="/img/uniclub-logo.png" />
  <script src="https://unpkg.com/lucide@latest"></script>
</head>
<body class="bg-gray-50 font-sans text-slate-800">
  <div class="min-h-screen grid grid-cols-[260px_1fr] gap-6 p-6">
    <!-- Sidebar (uniform) -->
    <%- include('../layouts/adminSidebar', { currentPath: (typeof currentPath !== 'undefined' ? currentPath : '/admin/messages'), messages: (typeof messages !== 'undefined' ? messages : []) }) %>

    <!-- Main Content -->
    <main class="flex flex-col gap-4">
      <!-- Header -->
      <header class="mb-2 flex items-center justify-between">
        <div>
          <h1 class="text-2xl font-bold text-slate-800">Messages Inbox</h1>
          <p class="text-sm text-slate-500">View and manage received messages</p>
        </div>
      </header>

      <!-- Messages Table -->
      <section class="bg-white rounded-2xl border border-gray-200 shadow-sm p-6">
        <% const _msgs = (typeof messages !== 'undefined' && Array.isArray(messages)) ? messages : []; %>
        <% if (_msgs.length > 0) { %>
          <div class="overflow-x-auto">
            <table class="w-full border-collapse text-sm">
              <thead class="bg-slate-100 text-slate-700">
                <tr>
                  <th class="p-3 text-left font-semibold">From</th>
                  <th class="p-3 text-left font-semibold">Email</th>
                  <th class="p-3 text-left font-semibold">Subject</th>
                  <th class="p-3 text-center font-semibold">Date</th>
                  <th class="p-3 text-center font-semibold">Status</th>
                  <th class="p-3 text-center font-semibold">Actions</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-slate-200">
                <% _msgs.forEach(m => { %>
                  <tr class="hover:bg-slate-50 <%= m.read ? '' : 'bg-red-50' %>">
                    <td class="p-3 font-medium"><%= m.sender_name %></td>
                    <td class="p-3"><%= m.sender_email %></td>
                    <td class="p-3"><%= m.subject %></td>
                    <td class="p-3 text-center"><%= m.created_at ? new Date(m.created_at).toLocaleDateString() : '' %></td>
                    <td class="p-3 text-center">
                      <% if (m.read) { %>
                        <span class="text-green-600 text-xs font-semibold">Read</span>
                      <% } else { %>
                        <span class="text-red-600 text-xs font-semibold">Unread</span>
                      <% } %>
                    </td>
                    <td class="p-3 flex justify-center gap-2">
                      <a href="/admin/messages/view/<%= m.id %>"
                         class="px-3 py-1 bg-blue-600 hover:bg-blue-700 text-white rounded text-xs flex items-center gap-1">
                        <i data-lucide="eye" class="w-3 h-3"></i> View
                      </a>
                      <form action="/admin/messages/delete/<%= m.id %>" method="POST" onsubmit="return confirm('Delete this message?')">
                        <button type="submit"
                                class="px-3 py-1 bg-red-600 hover:bg-red-700 text-white rounded text-xs flex items-center gap-1">
                          <i data-lucide="trash-2" class="w-3 h-3"></i> Delete
                        </button>
                      </form>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <p class="text-center text-slate-500 py-6">No messages available.</p>
        <% } %>
      </section>

      <!-- Footer -->
      <footer class="text-center text-xs text-slate-400 py-4 border-t mt-2">
        &copy; <%= new Date().getFullYear() %> UniClub Management System. All rights reserved.
      </footer>
    </main>
  </div>

  <script>window.lucide && window.lucide.replace();</script>
</body>
</html>
