<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Manage Officers | UniClub Admin</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="icon" href="/img/uniclub-logo.png" />
  <script src="https://unpkg.com/lucide@latest"></script>
</head>

<body class="bg-gray-50 font-sans text-slate-800">
  <div class="min-h-screen grid grid-cols-[260px_1fr] gap-6 p-6">
    <!-- Sidebar (uniform) -->
    <%- include('../layouts/adminSidebar', { currentPath: (typeof currentPath !== 'undefined' ? currentPath : '/admin/officers'), messages: (typeof messages !== 'undefined' ? messages : []) }) %>

    <!-- Main Content -->
    <main class="flex flex-col gap-4">
      <% 
        var _filters = (typeof filters !== 'undefined' && filters) ? filters : {}; 
        var _pagination = (typeof pagination !== 'undefined' && pagination) ? pagination : { page: 1, totalPages: 1, total: (officers && officers.length) || 0, limit: 20 };
        var _clubs = Array.isArray(clubs) ? clubs : []; 
      %>
      <!-- Header -->
      <header class="mb-6 flex items-center justify-between">
        <div>
          <h1 class="text-2xl font-bold text-slate-800">Manage Officers</h1>
          <p class="text-sm text-slate-500">View, add, or update officer information</p>
        </div>
        <a href="/admin/officers/add"
           class="flex items-center gap-2 px-4 py-2 bg-[#a10109d1] text-white rounded-lg hover:bg-[#870107] transition">
          <i data-lucide="plus"></i> Add Officer
        </a>
      </header>

      <!-- Filters -->
      <section class="bg-white rounded-2xl border border-gray-200 shadow-sm p-6">
        <form method="get" action="/admin/officers" class="grid grid-cols-1 md:grid-cols-3 gap-3">
          <div>
            <label class="block text-sm font-medium text-slate-700 mb-1">Search officer</label>
            <input type="text" name="search" value="<%= _filters.search || '' %>" placeholder="Name or Student ID" class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-[#a10109d1] focus:border-[#a10109d1]" />
          </div>
          <div>
            <label class="block text-sm font-medium text-slate-700 mb-1">Filter by club</label>
            <select name="club_id" class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-[#a10109d1] focus:border-[#a10109d1]">
              <option value="">All clubs</option>
              <% _clubs.forEach(club => { %>
                <option value="<%= club.id %>" <%= (String(_filters.club_id || '') === String(club.id)) ? 'selected' : '' %>><%= club.name %></option>
              <% }) %>
            </select>
          </div>
          <div class="flex items-end gap-2">
            <button type="submit" class="px-4 py-2 bg-[#a10109d1] text-white rounded-lg hover:bg-[#870107]">Apply</button>
            <a href="/admin/officers" class="px-4 py-2 bg-slate-200 text-slate-700 rounded-lg hover:bg-slate-300">Reset</a>
          </div>
        </form>
      </section>

      <!-- Officers Table -->
      <section class="bg-white rounded-2xl border border-gray-200 shadow-sm p-6">
        <% if (officers && officers.length > 0) { %>
          <div class="overflow-x-auto">
            <table class="w-full border-collapse text-sm">
              <thead class="bg-slate-100 text-slate-700">
                <tr>
                  <th class="p-3 text-left font-semibold">Name</th>
                  <th class="p-3 text-left font-semibold">Student ID</th>
                  <th class="p-3 text-left font-semibold">Club</th>
                  <th class="p-3 text-left font-semibold">Role</th>
                  <th class="p-3 text-center font-semibold">Actions</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-slate-200">
                <% officers.forEach(o => { %>
                  <tr class="hover:bg-slate-50">
                    <td class="p-3"><%= o.name %></td>
                    <td class="p-3"><%= o.studentid %></td>
                    <td class="p-3"><%= o.club %></td>
                    <td class="p-3"><%= o.role %></td>
                    <td class="p-3 flex justify-center gap-2">
                      <a href="/admin/officers/edit/<%= o.id %>"
                         class="px-3 py-1 rounded-md bg-blue-500 text-white text-xs hover:bg-blue-600">
                        <i data-lucide="edit-3" class="w-3 h-3"></i> Edit
                      </a>
                      <form action="/admin/officers/delete/<%= o.id %>" method="POST" onsubmit="return confirm('Delete this officer?')">
                        <button type="submit"
                               class="px-3 py-1 rounded-md bg-red-500 text-white text-xs hover:bg-red-600">
                          <i data-lucide="trash-2" class="w-3 h-3"></i> Delete
                        </button>
                      </form>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
          <!-- Pagination -->
          <div class="mt-4 flex items-center justify-between text-sm text-slate-600">
            <div>
              Page <strong><%= _pagination.page %></strong> of <strong><%= _pagination.totalPages %></strong>
              â€¢ Total: <strong><%= _pagination.total %></strong>
            </div>
            <div class="flex items-center gap-2">
              <% const qp = new URLSearchParams({
                   search: _filters.search || '',
                   club_id: _filters.club_id || '',
                   limit: String(_pagination.limit || 20)
                 });
                 const cur = _pagination.page || 1;
                 const totalPages = _pagination.totalPages || 1;
              %>
              <% if (cur > 1) { qp.set('page', String(cur - 1)); %>
                <a href="/admin/officers?<%= qp.toString() %>" class="px-3 py-1 rounded-lg border border-slate-300 hover:bg-slate-50">Prev</a>
              <% } else { %>
                <span class="px-3 py-1 rounded-lg border border-slate-200 text-slate-400">Prev</span>
              <% } %>
              <% if (cur < totalPages) { qp.set('page', String(cur + 1)); %>
                <a href="/admin/officers?<%= qp.toString() %>" class="px-3 py-1 rounded-lg border border-slate-300 hover:bg-slate-50">Next</a>
              <% } else { %>
                <span class="px-3 py-1 rounded-lg border border-slate-200 text-slate-400">Next</span>
              <% } %>
            </div>
          </div>
        <% } else { %>
          <p class="text-center text-slate-500 py-6">No officers found. Add your first officer to get started!</p>
        <% } %>
      </section>

      <!-- Footer -->
      <footer class="text-center text-xs text-slate-400 py-4 border-t mt-8">
        &copy; <%= new Date().getFullYear() %> UniClub Management System. All rights reserved.
      </footer>
    </main>
  </div>

  <script>
    window.lucide && window.lucide.replace();
  </script>
</body>
</html>
