<!-- views/layouts/adminSidebar.ejs -->
<aside class="bg-white border border-gray-200 rounded-2xl shadow-sm flex flex-col overflow-hidden">
  <!-- Brand -->
  <div class="flex items-center justify-between gap-3 px-4 py-4 border-b border-gray-200">
    <div class="flex items-center gap-3">
      <img src="/img/logo.png" alt="UniClub" class="size-10 rounded-full object-cover" />
      <div>
        <div class="font-bold">UniClub</div>
        <div class="text-gray-500 text-sm">Admin Panel</div>
      </div>
    </div>
    <button onclick="toggleSidebar()" class="lg:hidden p-1.5 rounded-lg hover:bg-gray-100 transition text-gray-600">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>
  </div>

  <!-- Nav -->
  <nav class="flex-1 p-3 space-y-3 overflow-y-auto">
    <!-- Dashboard (standalone) -->
    <div>
      <a href="/admin/dashboard"
         class="flex items-center gap-3 px-3 py-2 rounded-lg transition-all duration-200
                hover:bg-gray-50
                <%= currentPath === '/admin/dashboard' ? 'bg-blue-100 border-l-4 border-blue-600 text-blue-900 font-semibold' : 'text-gray-600' %>">
        <svg class="w-5 h-5 <%= currentPath === '/admin/dashboard' ? 'text-blue-700' : 'text-gray-500' %> flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
        </svg>
        <span class="flex-1">Dashboard</span>
      </a>
    </div>

    <!-- People -->
    <div>
      <p class="px-3 text-xs font-semibold text-gray-400 uppercase tracking-wider mb-1.5">People</p>
      <div class="space-y-0.5">
        <a href="/admin/students"
           class="flex items-center gap-3 px-3 py-1.5 rounded-lg transition-all duration-200 hover:bg-gray-50 <%= currentPath === '/admin/students' ? 'bg-blue-100 border-l-4 border-blue-600 text-blue-900 font-semibold' : 'text-gray-600' %>">
          <svg class="w-5 h-5 <%= currentPath === '/admin/students' ? 'text-blue-700' : 'text-gray-500' %> flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
          </svg>
          <span class="flex-1">Students</span>
        </a>
        <a href="/admin/officers"
           class="flex items-center gap-3 px-3 py-1.5 rounded-lg transition-all duration-200 hover:bg-gray-50 <%= currentPath === '/admin/officers' ? 'bg-blue-100 border-l-4 border-blue-600 text-blue-900 font-semibold' : 'text-gray-600' %>">
          <svg class="w-5 h-5 <%= currentPath === '/admin/officers' ? 'text-blue-700' : 'text-gray-500' %> flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
          <span class="flex-1">Officers</span>
        </a>
      </div>
    </div>

    <!-- Clubs -->
    <div>
      <p class="px-3 text-xs font-semibold text-gray-400 uppercase tracking-wider mb-1.5">Clubs</p>
      <div class="space-y-0.5">
        <a href="/admin/clubs"
           class="flex items-center gap-3 px-3 py-1.5 rounded-lg transition-all duration-200 hover:bg-gray-50 <%= currentPath === '/admin/clubs' ? 'bg-blue-100 border-l-4 border-blue-600 text-blue-900 font-semibold' : 'text-gray-600' %>">
          <svg class="w-5 h-5 <%= currentPath === '/admin/clubs' ? 'text-blue-700' : 'text-gray-500' %> flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
          </svg>
          <span class="flex-1">Clubs</span>
        </a>
        <a href="/admin/requirements"
           class="flex items-center gap-3 px-3 py-1.5 rounded-lg transition-all duration-200 hover:bg-gray-50 <%= currentPath === '/admin/requirements' ? 'bg-blue-100 border-l-4 border-blue-600 text-blue-900 font-semibold' : 'text-gray-600' %>">
          <svg class="w-5 h-5 <%= currentPath === '/admin/requirements' ? 'text-blue-700' : 'text-gray-500' %> flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
          </svg>
          <span class="flex-1">Requirements & Activities</span>
        </a>
      </div>
    </div>

    <!-- Operations -->
    <div>
      <p class="px-3 text-xs font-semibold text-gray-400 uppercase tracking-wider mb-1.5">Operations</p>
      <div class="space-y-0.5">
        <a href="/admin/events"
           class="flex items-center gap-3 px-3 py-1.5 rounded-lg transition-all duration-200 hover:bg-gray-50 <%= currentPath === '/admin/events' ? 'bg-blue-100 border-l-4 border-blue-600 text-blue-900 font-semibold' : 'text-gray-600' %>">
          <svg class="w-5 h-5 <%= currentPath === '/admin/events' ? 'text-blue-700' : 'text-gray-500' %> flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          <span class="flex-1">Events</span>
        </a>
        <a href="/admin/approvals"
           class="flex items-center gap-3 px-3 py-1.5 rounded-lg transition-all duration-200 hover:bg-gray-50 <%= currentPath === '/admin/approvals' ? 'bg-blue-100 border-l-4 border-blue-600 text-blue-900 font-semibold' : 'text-gray-600' %>">
          <svg class="w-5 h-5 <%= currentPath === '/admin/approvals' ? 'text-blue-700' : 'text-gray-500' %> flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <span class="flex-1">Approvals</span>
          <% if (typeof pendingCount !== 'undefined' && pendingCount > 0) { %>
            <span class="px-2 py-0.5 text-xs font-semibold rounded-full bg-orange-100 text-orange-700"><%= pendingCount %></span>
          <% } %>
        </a>
        <a href="/admin/messages"
           class="flex items-center gap-3 px-3 py-1.5 rounded-lg transition-all duration-200 hover:bg-gray-50 <%= currentPath === '/admin/messages' ? 'bg-blue-100 border-l-4 border-blue-600 text-blue-900 font-semibold' : 'text-gray-600' %>">
          <svg class="w-5 h-5 <%= currentPath === '/admin/messages' ? 'text-blue-700' : 'text-gray-500' %> flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
          <span class="flex-1">Messages</span>
          <% const unread = (messages || []).filter(m => !m.read).length; %>
          <% if (unread > 0) { %>
            <span class="px-2 py-0.5 text-xs font-semibold rounded-full bg-orange-100 text-orange-700"><%= unread %></span>
          <% } %>
        </a>
        <a href="/admin/reports"
           class="flex items-center gap-3 px-3 py-1.5 rounded-lg transition-all duration-200 hover:bg-gray-50 <%= currentPath === '/admin/reports' ? 'bg-blue-100 border-l-4 border-blue-600 text-blue-900 font-semibold' : 'text-gray-600' %>">
          <svg class="w-5 h-5 <%= currentPath === '/admin/reports' ? 'text-blue-700' : 'text-gray-500' %> flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          <span class="flex-1">Reports</span>
        </a>
      </div>
    </div>

    <!-- Insights -->
    <div>
      <p class="px-3 text-xs font-semibold text-gray-400 uppercase tracking-wider mb-1.5">Insights</p>
      <div class="space-y-0.5">
        <a href="/admin/analytics"
           class="flex items-center gap-3 px-3 py-1.5 rounded-lg transition-all duration-200 hover:bg-gray-50 <%= currentPath === '/admin/analytics' ? 'bg-blue-100 border-l-4 border-blue-600 text-blue-900 font-semibold' : 'text-gray-600' %>">
          <svg class="w-5 h-5 <%= currentPath === '/admin/analytics' ? 'text-blue-700' : 'text-gray-500' %> flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
          <span class="flex-1">Analytics</span>
        </a>
      </div>
    </div>
  </nav>

  <!-- User Profile & Sign out -->
  <div class="p-3 border-t-2 border-gray-200 bg-gray-50 space-y-2">
    <!-- User Profile Dropdown -->
    <% if (typeof adminOfficer !== 'undefined' && adminOfficer) { %>
      <div class="relative">
        <button id="adminProfileBtn" class="w-full flex items-center gap-3 px-3 py-2 text-sm text-gray-700 hover:bg-gray-100 rounded-lg transition-colors font-medium">
          <div class="relative w-10 h-10 rounded-full overflow-hidden shrink-0 ring-2 ring-gray-300">
            <% if (adminOfficer.profile_picture) { %>
              <img
                src="<%= adminOfficer.profile_picture %>"
                alt="Profile"
                class="w-full h-full object-cover"
                onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
              />
            <% } %>
            <div class="<%= adminOfficer.profile_picture ? 'hidden' : 'flex' %> w-full h-full items-center justify-center text-xs font-semibold text-gray-600 bg-gray-200">
              <%= (adminOfficer.first_name || 'A').charAt(0).toUpperCase() %><%= (adminOfficer.last_name || '').charAt(0).toUpperCase() %>
            </div>
          </div>
          <div class="flex-1 text-left min-w-0">
            <p class="font-semibold text-gray-900 truncate"><%= adminOfficer.first_name || '' %> <%= adminOfficer.last_name || '' %></p>
            <p class="text-xs text-gray-500 truncate">Admin</p>
          </div>
          <svg class="w-4 h-4 text-gray-500 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7"></path>
          </svg>
        </button>
        <div id="adminProfileMenu" class="hidden absolute bottom-full left-0 mb-2 w-full bg-white rounded-lg border border-gray-200 shadow-lg overflow-hidden z-50">
          <div class="p-3 bg-gray-50 border-b">
            <p class="font-semibold text-sm text-gray-900"><%= adminOfficer.first_name || '' %> <%= adminOfficer.last_name || '' %></p>
            <p class="text-xs text-gray-500">Administrator</p>
            <% if (adminOfficer.role) { %>
              <p class="text-xs text-gray-500 mt-1"><%= adminOfficer.role %></p>
            <% } %>
          </div>
          <div class="p-2">
            <a href="/admin/settings" class="block px-3 py-2 rounded-lg hover:bg-gray-50 text-sm text-gray-700">Settings</a>
            <a href="/admin/profile" class="block px-3 py-2 rounded-lg hover:bg-gray-50 text-sm text-gray-700">Profile</a>
          </div>
        </div>
      </div>
    <% } %>
    <!-- Sign out -->
    <form method="post" action="/admin/logout">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <button type="submit" class="w-full flex items-center gap-2 px-3 py-2 text-sm text-red-600 hover:text-red-700 hover:bg-red-50 rounded-lg transition-colors font-medium">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
        </svg>
        Sign out
      </button>
    </form>
  </div>
  <script>
    // Admin profile dropdown toggle
    const adminProfileBtn = document.getElementById('adminProfileBtn');
    const adminProfileMenu = document.getElementById('adminProfileMenu');
    if (adminProfileBtn && adminProfileMenu) {
      adminProfileBtn.addEventListener('click', (e) => {
        e.stopPropagation();
        adminProfileMenu.classList.toggle('hidden');
        const svg = adminProfileBtn.querySelector('svg');
        if (svg) {
          svg.style.transform = adminProfileMenu.classList.contains('hidden') ? 'rotate(0deg)' : 'rotate(180deg)';
        }
      });
      document.addEventListener('click', (e) => {
        if (!adminProfileBtn.contains(e.target) && !adminProfileMenu.contains(e.target)) {
          adminProfileMenu.classList.add('hidden');
          const svg = adminProfileBtn.querySelector('svg');
          if (svg) {
            svg.style.transform = 'rotate(0deg)';
          }
        }
      });
    }
  </script>
</aside>
