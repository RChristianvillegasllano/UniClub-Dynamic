<header class="bg-maroon-800 text-white shadow-md">
  <div class="container mx-auto px-6 py-4 flex justify-between items-center">
    <h1 class="text-2xl font-bold tracking-wide">
      <span class="text-yellow-400">Uni</span>Club Admin
    </h1>

    <nav class="space-x-6 hidden md:flex">
      <a
        href="/admin/dashboard"
        class="hover:text-yellow-400 font-medium transition duration-150"
        >Dashboard</a
      >
      <a
        href="/admin/students"
        class="hover:text-yellow-400 font-medium transition duration-150"
        >Students</a
      >
      <a
        href="/admin/clubs"
        class="hover:text-yellow-400 font-medium transition duration-150"
        >Clubs</a
      >
      <a
        href="/admin/events"
        class="hover:text-yellow-400 font-medium transition duration-150"
        >Events</a
      >
    </nav>

    <form action="/admin/logout" method="POST" class="hidden md:block">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <button
        type="submit"
        class="bg-yellow-500 hover:bg-yellow-600 text-maroon-900 font-semibold px-4 py-2 rounded-lg"
      >
        Logout
      </button>
    </form>

    <!-- Mobile Menu Button -->
    <button
      id="menu-btn"
      class="md:hidden flex items-center px-2 py-1 border border-white rounded"
    >
      <svg
        class="w-6 h-6 text-white"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden bg-maroon-700 md:hidden">
    <nav class="flex flex-col p-4 space-y-3">
      <a href="/admin/dashboard" class="hover:text-yellow-400">Dashboard</a>
      <a href="/admin/students" class="hover:text-yellow-400">Students</a>
      <a href="/admin/clubs" class="hover:text-yellow-400">Clubs</a>
      <a href="/admin/events" class="hover:text-yellow-400">Events</a>
      <form action="/admin/logout" method="POST">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <button
          type="submit"
          class="w-full text-left hover:text-yellow-400 mt-3"
        >
          Logout
        </button>
      </form>
    </nav>
  </div>

  <script>
    const menuBtn = document.getElementById("menu-btn");
    const mobileMenu = document.getElementById("mobile-menu");
    menuBtn.addEventListener("click", () => {
      mobileMenu.classList.toggle("hidden");
    });
  </script>
</header>
