      <div class="alert-success">
        <i class="fas fa-check-circle mr-2"></i>Personal information updated successfully!
      </div>
    <% } %>
    <% if (success === 'password_updated') { %>
      <div class="alert-success">
        <i class="fas fa-check-circle mr-2"></i>Password updated successfully!
      </div>
    <% } %>
    <% if (error === 'password_mismatch') { %>
      <div class="alert-error">
        <i class="fas fa-exclamation-circle mr-2"></i>New passwords do not match!
      </div>
    <% } %>
    <% if (error === 'password_too_short') { %>
      <div class="alert-error">
        <i class="fas fa-exclamation-circle mr-2"></i>Password must be at least 8 characters!
      </div>
    <% } %>
    <% if (error === 'invalid_current_password') { %>
      <div class="alert-error">
        <i class="fas fa-exclamation-circle mr-2"></i>Current password is incorrect!
      </div>
    <% } %>
    <% if (error === 'update_failed') { %>
      <div class="alert-error">
        <i class="fas fa-exclamation-circle mr-2"></i>Failed to update settings. Please try again.
      </div>
    <% } %>

