  <script>
    // ===== THEME TOGGLE FUNCTIONALITY =====
    const currentTheme = localStorage.getItem('theme') || 'light';
    
    function updateThemeUI(isLight) {
      if (isLight) {
        document.body.classList.add('light-mode');
        document.documentElement.classList.add('light-mode');
      } else {
        document.body.classList.remove('light-mode');
        document.documentElement.classList.remove('light-mode');
      }
    }
    
    updateThemeUI(currentTheme === 'light');

    window.addEventListener('storage', function(e) {
      if (e.key === 'theme') {
        updateThemeUI(e.newValue === 'light');
      }
    });

    function togglePassword(fieldId) {
      const input = document.getElementById(fieldId);
      input.type = input.type === 'password' ? 'text' : 'password';
    }

    // Email validation: firstinitial.lastname.6digits.tc@umindanao.edu.ph
    function validateEmail() {
      const emailInput = document.getElementById('email');
      const emailError = document.getElementById('emailError');
      const email = emailInput.value.trim();
      
      // Email format: firstinitial.lastname.6digits.tc@umindanao.edu.ph
      const emailPattern = /^[a-z]\.[a-z]+\.\d{6}\.tc@umindanao\.edu\.ph$/i;
      
      if (email && !emailPattern.test(email)) {
        emailInput.classList.add('border-red-500');
        emailInput.classList.remove('border-gray-200');
        emailError.textContent = 'Email must follow format: firstinitial.lastname.6digitid.tc@umindanao.edu.ph (e.g., j.delacruz.111222.tc@umindanao.edu.ph)';
        emailError.classList.remove('hidden');
        return false;
      } else {
        emailInput.classList.remove('border-red-500');
        emailInput.classList.add('border-gray-200');
        emailError.classList.add('hidden');
        return true;
      }
    }

    function clearEmailError() {
      const emailInput = document.getElementById('email');
      const emailError = document.getElementById('emailError');
      emailInput.classList.remove('border-red-500');
      emailInput.classList.add('border-gray-200');
      emailError.classList.add('hidden');
    }

    // Name validation: only letters, spaces, hyphens, and apostrophes
    function validateName(inputId, errorId) {
      const nameInput = document.getElementById(inputId);
      const nameError = document.getElementById(errorId);
      const name = nameInput.value.trim();
      
      // Pattern: only letters, spaces, hyphens, and apostrophes
      const namePattern = /^[A-Za-z\s'-]+$/;
      
      // Check for potentially malicious content (excluding apostrophe which is allowed)
      const dangerousPatterns = /[<>\"&;{}[\]()=+*$%#@!`~|\\]/;
      
      if (name && (dangerousPatterns.test(name) || !namePattern.test(name))) {
        nameInput.classList.add('border-red-500');
        nameInput.classList.remove('border-gray-200');
        nameError.textContent = `${inputId === 'firstName' ? 'First' : 'Last'} name contains invalid characters. Only letters, spaces, hyphens (-), and apostrophes (') are allowed.`;
        nameError.classList.remove('hidden');
        return false;
      } else {
        nameInput.classList.remove('border-red-500');
        nameInput.classList.add('border-gray-200');
        nameError.classList.add('hidden');
        return true;
      }
    }

    // Student ID validation: exactly 6 digits
    function validateStudentId() {
      const idInput = document.getElementById('studentId');
      const idError = document.getElementById('studentIdError');
      let id = idInput.value.trim();
      
      // Remove any non-digit characters
      id = id.replace(/\D/g, '');
      idInput.value = id;
      
      if (id && id.length !== 6) {
        idInput.classList.add('border-red-500');
        idInput.classList.remove('border-gray-200');
        idError.textContent = 'Student ID must be exactly 6 digits';
        idError.classList.remove('hidden');
        return false;
      } else {
        idInput.classList.remove('border-red-500');
        idInput.classList.add('border-gray-200');
        idError.classList.add('hidden');
        return true;
      }
    }

    // Real-time password matching indicator
    document.getElementById('confirmPassword')?.addEventListener('input', function() {
      const password = document.getElementById('password').value;
      const confirmPassword = this.value;
      
      if (confirmPassword && password !== confirmPassword) {
        this.style.borderColor = '#ef4444';
      } else if (confirmPassword && password === confirmPassword) {
        this.style.borderColor = '#10b981';
      } else {
        this.style.borderColor = '#e5e7eb';
      }
    });

    // Form validation
    document.querySelector('form')?.addEventListener('submit', function(e) {
      const password = document.getElementById('password').value;
      const confirmPassword = document.getElementById('confirmPassword').value;
      const email = document.getElementById('email').value;
      const studentId = document.getElementById('studentId').value;
      
      let isValid = true;
      let errorMessage = '';
      
      // Validate first name
      const firstNameValid = validateName('firstName', 'firstNameError');
      if (!firstNameValid) {
        isValid = false;
        errorMessage = 'First name contains invalid characters. Only letters, spaces, hyphens (-), and apostrophes (\') are allowed.';
      }
      
      // Validate last name
      const lastNameValid = validateName('lastName', 'lastNameError');
      if (!lastNameValid) {
        isValid = false;
        if (errorMessage) errorMessage += '\n';
        errorMessage += 'Last name contains invalid characters. Only letters, spaces, hyphens (-), and apostrophes (\') are allowed.';
      }
      
      // Validate email format
      const emailPattern = /^[a-z]\.[a-z]+\.\d{6}\.tc@umindanao\.edu\.ph$/i;
      if (!emailPattern.test(email)) {
        isValid = false;
        validateEmail();
        if (errorMessage) errorMessage += '\n';
        errorMessage += 'Please enter a valid UMindanao email address in the format: firstinitial.lastname.6digitid.tc@umindanao.edu.ph';
      }
      
      // Validate student ID
      if (!/^\d{6}$/.test(studentId)) {
        isValid = false;
        validateStudentId();
        if (errorMessage) errorMessage += '\n';
        errorMessage += 'Student ID must be exactly 6 digits';
      }
      
      // Validate password match
      if (password !== confirmPassword) {
        isValid = false;
        if (errorMessage) errorMessage += '\n';
        errorMessage += 'Passwords do not match!';
      }
      
      if (!isValid) {
        e.preventDefault();
        showToast(errorMessage, 'error', 'Validation Error');
        return false;
      }
    });
  </script>

  <!-- Toast Container -->
  <div id="toastContainer"></div>

  <script>
    // Toast Notification Function
    function showToast(message, type = 'error', title = null) {
      const container = document.getElementById('toastContainer');
      if (!container) {
        const newContainer = document.createElement('div');
        newContainer.id = 'toastContainer';
        newContainer.style.cssText = 'position: fixed; top: 24px; right: 24px; z-index: 10000; display: flex; flex-direction: column; gap: 12px; pointer-events: none;';
        document.body.appendChild(newContainer);
        container = newContainer;
      }

      const toast = document.createElement('div');
      toast.className = `toast toast-${type}`;

      const icons = {
        success: '<i class="fas fa-check-circle"></i>',
        error: '<i class="fas fa-exclamation-circle"></i>',
        warning: '<i class="fas fa-exclamation-triangle"></i>',
        info: '<i class="fas fa-info-circle"></i>'
      };

      const icon = icons[type] || icons.error;

      toast.innerHTML = `
        <div class="toast-icon">${icon}</div>
        <div class="toast-content">
          ${title ? `<div class="toast-title">${title}</div>` : ''}
          <div class="toast-message">${message}</div>
        </div>
        <div class="toast-close" onclick="this.parentElement.remove()">×</div>
      `;

      container.appendChild(toast);

      setTimeout(() => {
        toast.style.animation = 'slideOutRight 0.3s ease-out';
        setTimeout(() => {
          if (toast.parentElement) {
            toast.remove();
          }
        }, 300);
      }, 5000);
    }
  </script>
