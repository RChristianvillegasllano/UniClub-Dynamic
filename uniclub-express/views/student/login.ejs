<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="icon" href="https://phshirt.com/wp-content/uploads/2022/01/UM-Tagum-College-1950.png" type="image/x-icon">
  <title><%= typeof title !== 'undefined' ? title : 'UniClub â€¢ Login' %></title>

  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            brandRed: '#c62828',
            brandOrange: '#ef6c00',
            ink: '#1f2933',
            subtle: '#6b7280',
          },
          fontFamily: {
            ui: ['Inter', 'system-ui', 'sans-serif'],
          },
        }
      }
    }
  </script>

  <!-- Apply theme immediately to prevent flash -->
  <script>
    (function() {
      const theme = localStorage.getItem('theme') || 'light';
      if (theme === 'light') {
        document.documentElement.classList.add('light-mode');
        document.body.classList.add('light-mode');
      }
    })();
  </script>

  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');
    
    body::before {
      content: "";
      position: fixed;
      inset: 0;
      background: url("/img/MfL6WWSk.jpg") center/cover no-repeat;
      background-attachment: fixed;
      filter: saturate(0.7) brightness(0.8);
      z-index: -2;
    }
    body::after {
      content: "";
      position: fixed;
      inset: 0;
      background: linear-gradient(135deg, rgba(198,40,40,0.92), rgba(239,108,0,0.85));
      mix-blend-mode: multiply;
      z-index: -1;
      transition: opacity 0.3s ease;
    }

    /* Light Mode Styles */
    body.light-mode::after {
      background: linear-gradient(135deg, rgba(198,40,40,0.7), rgba(239,108,0,0.65));
      mix-blend-mode: normal;
    }

    body.light-mode .glass-card {
      background: rgba(255, 255, 255, 0.98);
      box-shadow: 0 20px 60px rgba(0,0,0,0.15), 0 0 0 1px rgba(0,0,0,0.1);
    }

    body.light-mode .text-white {
      color: #1e293b !important;
    }

    @keyframes fadeUp {
      from { opacity: 0; transform: translateY(32px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    @keyframes slideIn {
      from { opacity: 0; transform: translateX(24px); }
      to { opacity: 1; transform: translateX(0); }
    }

    .fade-up { animation: fadeUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards; }
    .slide-in { animation: slideIn 0.7s cubic-bezier(0.16, 1, 0.3, 1) forwards; }
    
    .glass-card {
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(20px);
      box-shadow: 0 20px 60px rgba(0,0,0,0.3), 0 0 0 1px rgba(255,255,255,0.9);
    }

    .input-field {
      transition: all 0.3s ease;
    }
    
    .input-field:focus {
      transform: translateY(-2px);
      box-shadow: 0 8px 16px rgba(198,40,40,0.15);
    }

    .btn-primary {
      background: linear-gradient(135deg, #801515 0%, #d75a06 100%);
      transition: all 0.3s ease;
      box-shadow: 0 4px 16px rgba(198,40,40,0.4);
    }
    
    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 24px rgba(198,40,40,0.5);
    }
    
    .btn-primary:active {
      transform: translateY(0);
    }

    .logo-badge {
      background: linear-gradient(135deg, #c62828 0%, #ef6c00 100%);
      box-shadow: 0 4px 12px rgba(198,40,40,0.3);
    }
  </style>
</head>

<body class="min-h-screen font-ui text-white flex items-center justify-center px-4 py-8">

  <main class="w-full max-w-6xl">
    <!-- Top Navigation -->
    <header class="fade-up mb-12 flex items-center justify-between text-sm">
      <a href="/" class="flex items-center gap-3">
        <img src="/img/logo.png" alt="UM Logo" class="w-11 h-11 object-contain">
        <div class="leading-tight">
          <p class="uppercase tracking-[0.24em] text-white/80 text-[10px] font-medium">UniClub</p>
          <p class="font-semibold text-base text-white">University of Mindanao</p>
        </div>
      </a>
    </header>

    <!-- Main Content -->
    <section class="grid lg:grid-cols-[1.2fr,1fr] gap-16 items-center">
      <!-- Left Content -->
      <div class="space-y-8 fade-up" style="animation-delay: 0.1s;">
        <div class="space-y-5">
          <div class="inline-block px-4 py-2 rounded-full bg-white/10 backdrop-blur-md border border-white/20">
            <p class="text-xs uppercase tracking-[0.2em] text-white/90 font-medium">
              Student Portal Access
            </p>
          </div>
          
          <h1 class="text-4xl lg:text-5xl xl:text-6xl font-bold leading-tight">
            Welcome back to<br/>
            <span class="bg-gradient-to-r from-white to-white/90 bg-clip-text text-transparent">UniClub</span>
          </h1>
          
          <p class="text-lg text-white/90 leading-relaxed max-w-xl">
            Access your dashboard, manage organizations, and stay updated with University of Mindanao events and activities.
          </p>
        </div>

        <!-- Features -->
        <div class="grid grid-cols-2 gap-4 max-w-xl pt-4">
          <div class="p-4 rounded-xl bg-white/10 backdrop-blur-md border border-white/20">
            <div class="w-10 h-10 rounded-lg bg-white/20 flex items-center justify-center mb-3">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
            </div>
            <p class="text-sm font-semibold mb-1">Organizations</p>
            <p class="text-xs text-white/70">Manage clubs & groups</p>
          </div>
          
          <div class="p-4 rounded-xl bg-white/10 backdrop-blur-md border border-white/20">
            <div class="w-10 h-10 rounded-lg bg-white/20 flex items-center justify-center mb-3">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
            </div>
            <p class="text-sm font-semibold mb-1">Events</p>
            <p class="text-xs text-white/70">Stay updated</p>
          </div>
        </div>
      </div>

      <!-- Login Card -->
      <div class="flex justify-end slide-in" style="animation-delay: 0.2s;">
        <div class="glass-card w-full max-w-md rounded-3xl p-8 lg:p-10">
          
          <% if (typeof error !== 'undefined' && error) { %>
          <div class="mb-6 p-4 rounded-xl bg-red-50 border border-red-200">
            <p class="text-sm text-red-800"><%= error %></p>
          </div>
          <% } %>

          <% if (typeof signup !== 'undefined' && signup === 'success') { %>
          <div class="mb-6 p-4 rounded-xl bg-green-50 border border-green-200">
            <div class="flex items-start gap-3">
              <svg class="w-5 h-5 text-green-600 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <div>
                <p class="text-sm font-semibold text-green-800 mb-1">Account Created Successfully!</p>
                <p class="text-sm text-green-700">You can now log in with your credentials.</p>
              </div>
            </div>
          </div>
          <% } %>

          <h2 class="text-3xl font-bold text-ink mb-2">
            Log in
          </h2>
          <p class="text-subtle text-sm mb-8">
            Enter your credentials to access your account
          </p>

          <form class="space-y-6" method="POST" action="/student/login">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <!-- Email -->
            <div>
              <label class="block text-sm font-semibold text-gray-800 mb-2">
                Email Address
              </label>
              <input
                type="email"
                name="email"
                id="email"
                placeholder="Enter your email"
                required
                class="input-field w-full px-4 py-3.5 text-sm rounded-xl border-2 border-gray-200 bg-white
                       text-gray-900 placeholder:text-gray-400
                       focus:outline-none focus:border-brandRed"
              />
            </div>

            <!-- Password -->
            <div>
              <label class="block text-sm font-semibold text-gray-800 mb-2">
                Password
              </label>
              <div class="relative">
                <input
                  type="password"
                  name="password"
                  id="password"
                  placeholder="Enter your password"
                  required
                  class="input-field w-full px-4 py-3.5 text-sm rounded-xl border-2 border-gray-200 bg-white
                         text-gray-900 placeholder:text-gray-400
                         focus:outline-none focus:border-brandRed"
                />
                <button
                  type="button"
                  onclick="togglePassword()"
                  class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-400 hover:text-gray-600"
                >
                  <svg id="eyeIcon" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                  </svg>
                </button>
              </div>
            </div>

            <!-- Remember + Forgot -->
            <div class="flex items-center justify-between text-sm">
              <label class="flex items-center gap-2 cursor-pointer group">
                <input 
                  type="checkbox" 
                  name="remember"
                  class="w-4 h-4 text-brandRed border-gray-300 rounded focus:ring-brandOrange focus:ring-2" 
                />
                <span class="text-gray-700 group-hover:text-gray-900">Remember me</span>
              </label>
              <a href="#" class="font-semibold text-brandRed hover:text-brandOrange transition-colors">
                Forgot password?
              </a>
            </div>

            <!-- Login Button -->
            <button
              type="submit"
              class="btn-primary w-full py-4 text-base font-semibold tracking-wide
                     rounded-xl text-white">
              LOG IN
            </button>
          </form>

          <!-- Sign Up Link -->
          <p class="mt-8 text-center text-sm text-gray-600">
            Don't have an account?
            <a href="/student/signup" class="text-brandRed font-semibold hover:text-brandOrange transition-colors">
              Sign up now
            </a>
          </p>
        </div>
      </div>
    </section>
  </main>

  <script>
    function togglePassword() {
      const input = document.getElementById('password');
      const icon = document.getElementById('eyeIcon');
      
      if (input.type === 'password') {
        input.type = 'text';
        icon.innerHTML = `
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"/>
        `;
      } else {
        input.type = 'password';
        icon.innerHTML = `
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
        `;
      }
    }
  </script>

</body>
</html>
